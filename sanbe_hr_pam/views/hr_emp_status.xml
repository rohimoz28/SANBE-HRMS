<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="hr_emp_status_form" model="ir.ui.view">
            <field name="name">hr.emp.status.form</field>
            <field name="model">hr.emp.status</field>
            <field name="arch" type="xml">
                <form string="Employee Status">
                    <sheet>
                        <group>
                        <!-- <div class="oe_title">
                            <h1>
                                <field id="name" options="{'line_breaks': False}" widget="text"
                                    class="text-break" name="name" default_focus="1"
                                    placeholder="e.g. Months Name" />
                            </h1>
                        </div> -->
                        <field name="status" />
                        <field name="name" />
                        <field name="emp_status" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_emp_status_tree" model="ir.ui.view">
            <field name="name">hr.emp.status.tree</field>
            <field name="model">hr.emp.status</field>
            <field name="arch" type="xml">
                <tree string="Employee Status Name">
                    <field name="status" />
                    <field name="name" />
                    <field name="emp_status" />
                </tree>
            </field>
        </record>

        <record id="action_hr_emp_status" model="ir.actions.act_window">
            <field name="name">Employee Status</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.emp.status</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Report Employee Status
                </p>
                <p>
                    Create new Employee Status
                </p>
            </field>
        </record>

    </data>
</odoo>