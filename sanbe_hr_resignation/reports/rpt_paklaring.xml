                        <tr style="font-size:15px;">
                            <td width="50%"></td>
                            <td width="50%" style="font-family: 'Times New Roman', Times, serif;">
                                <span t-esc="company.name.upper()" /> Pharmaceutical Manufacturer
                            </td>
                        </tr>
                        <tr style="font-size:15px;">
                            <td width="60%"></td>
                            <td width="40%" style="font-family: 'Times New Roman', Times, serif;">
                                <span t-field="company.street" />
                                <span t-field="company.street2" />
                                <!-- <span t-field="company.state_id" />
