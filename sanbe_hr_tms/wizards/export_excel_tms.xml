<?xml version="1.0" encoding="utf-8"?>
<odoo>

<data>

    <record id="export_excel_tms_view_form" model="ir.ui.view">
        <field name="name">export_excel_tms.view.form</field>
        <field name="model">export.excel.tms</field>
        <field name="arch" type="xml">
            <form string="Rekap Perhitungan Kehadiran" options="{'no_close': True}">
                <sheet>
                    <group>
                        <field name="periode_id" required="1"/>
                        <field name="branch_id" invisible="1"/>
                        <field name="department_id" no_close="1" domain="[('branch_id', '=', branch_id)]" readonly="0" options="{'no_create': True, 'no_close': True}"/>
                    </group>
                    <!-- <field name="allowed_department_ids" invisible="1" /> -->
                </sheet>
                <footer>
                    <button
                        name="button_export_html"
                        string="View"
                        type="object"
                        default_focus="1"
                        class="oe_highlight"
                    />
                    or
                    <button
                        name="button_export_xlsx"
                        string="Export XLSX"
                        type="object"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="export_excel_tms_action_wizard" model="ir.actions.act_window">
            <field name="name">Rekap Perhitungan Kehadiran</field>
            <field name="res_model">export.excel.tms</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="groups_id" eval="[(4, ref('sanbe_hr_tms.group_tms_user'))]"/>
        </record>

</data>


</odoo>
