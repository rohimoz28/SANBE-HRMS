<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_department_wizard_view_form" model="ir.ui.view">
            <field name="name">hr.employee.department.wizard.view.form</field>
            <field name="model">hr.employeedepartment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                            <group id="info">
                                <field name="area_id" options="{'no_edit': True, 'no_create': True, 'no_open': True}" readonly="1"/>
                                <field name="branch_ids" options="{'no_edit': True, 'no_create': True, 'no_open': True}" invisible="1"/>
                                <field name="wdcode_ids" options="{'no_edit': True, 'no_create': True, 'no_open': True}" invisible="1"/>
                                <field name="branch_id" options="{'no_edit': True, 'no_create': True, 'no_open': True}" readonly="1"/>
                                <field name="alldepartment" options="{'no_edit': True, 'no_create': True, 'no_open': True}" invisible="1"/>
                                <field name="department_id" options="{'no_edit': True, 'no_create': True, 'no_open': True}"/>
                                <field name="empgroup_id" invisible="1"/>
                            </group>
                            <group col="3" id="planning">
                                <group>
                                    <field name="plan_id" invisible="1"/>
                                    <field name="modelname" invisible="1"/>
                                    <field name="branch_id" invisible="modelname != 'hr.overtime.planning'"/>
                                    <field name="wdcode" options="{'no_edit': True, 'no_create': True, 'no_open': True}" invisible="modelname == 'hr.overtime.planning'" required="modelname == 'hr.overtime.planning'"/>
                                    <!--field name="periode_id" options="{'no_edit': True, 'no_create': True, 'no_open': True}" invisible="modelname == 'hr.overtime.planning'" required="modelname == 'hr.overtime.planning'"/-->
                                    <field name="valid_from" widget="date" invisible="modelname == 'hr.overtime.planning'" required="modelname == 'hr.overtime.planning'"/>
                                    <field name="valid_to" widget="date" invisible="modelname == 'hr.overtime.planning'" required="modelname == 'hr.overtime.planning'"/>
                                    <field name="plann_date_from" widget="date" invisible="modelname != 'hr.overtime.planning'"/>
                                    <field name="plann_date_to" widget="date" invisible="modelname != 'hr.overtime.planning'"/>
                                    <field name="ot_plann_from" widget="easy_timepicker" invisible="modelname != 'hr.overtime.planning'"/>
                                    <field name="ot_plann_to" widget="easy_timepicker" invisible="modelname != 'hr.overtime.planning'"/>
                                    <field name="approve_time_from" widget="easy_timepicker" invisible="modelname != 'hr.overtime.planning'"/>
                                    <field name="approve_time_to" widget="easy_timepicker" invisible="modelname != 'hr.overtime.planning'"/>
                                </group>
                                <group>
                                    <field name="machine" invisible="modelname != 'hr.overtime.planning'"/>
                                    <field name="work_plann" invisible="modelname != 'hr.overtime.planning'"/>
                                    <field name="output_plann" invisible="modelname != 'hr.overtime.planning'"/>
                                    <field name="transport" invisible="modelname != 'hr.overtime.planning'"/>
                                    <field name="meals" invisible="modelname != 'hr.overtime.planning'"/>
                                </group>
                                <group>
                                    <button name="action_insert_empgroup" string="Apply" type="object" class="oe_highlight" data-hotkey="q" invisible="modelname != 'hr.overtime.planning'"/>
                                    <button name="btn_select_all" string="Selected All" type="object" class="oe_highlight" invisible="modelname != 'hr.overtime.planning'"/>
                                    <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="x" invisible="modelname != 'hr.overtime.planning'"/>
                                </group>
                            </group>
                            <notebook>
                            <page string="Employee List" name="empgroup_list">
                                <field name="employee_ids">
                                    <tree editable="bottom">
                                            <field name="cari_id" column_invisible="1"/>
                                            <field name="employee_id"/>
                                             <field name="department_id"/>
                                             <field name="nik"/>
                                             <field name="job_id"/>
                                            <field name="is_selected"/>
                                    </tree>
                                </field>
                            </page>
                            </notebook>
                    </sheet>
                    <footer>
                        <button name="action_insert_empgroup" string="Apply" type="object" class="oe_highlight" data-hotkey="q" invisible="modelname == 'hr.overtime.planning'"/>
                        <button name="btn_select_all" string="Selected All" type="object" class="oe_highlight" invisible="modelname == 'hr.overtime.planning'"/>
                        <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="x" invisible="modelname == 'hr.overtime.planning'"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="hr_employee_department_wizard_action" model="ir.actions.act_window">
            <field name="name">Search Employee</field>
            <field name="res_model">hr.employeedepartment</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
