<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_hr_wiz_ot_meals_form" model="ir.ui.view">
        <field name="name">report.ot.meals.rute.wiz.form</field>
        <field name="model">report.ot.meals.rute.wiz</field>
        <field name="arch" type="xml">
            <form string="OT Meals / Rute Report Wizard">
                <group>
                    <field name="branch_id" invisible="1" />                        
                    <field name="type_report" required="1" /> 
                    <label for="date_from" string="Periode"/>                    
                    <div for="date_from" string="Periode" class="o_row">
                            <field name="date_from"  required="1" /> s/d 
                            <field name="date_to" required="1" /> 
                    </div>
                    <field name="department_id" options="{'no_open': True, 'no_create': True, 'no_edit': True, 'no_open_edit': True}" /> 
                    <!-- <field name="status_ids" widget="many2many_tags" options="{'no_open': True, 'no_create': True, 'no_edit': True, 'no_open_edit': True}" invisible="1" />   -->
                </group>
                <footer>
                    <button name="button_export_pdf" type="object" string="Print" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to Open Wizard -->
    <record id="action_hr_wiz_ot_meals" model="ir.actions.act_window">
        <field name="name">OT Meals / Rute Report</field>
        <field name="res_model">report.ot.meals.rute.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>