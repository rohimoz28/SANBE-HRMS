<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="sanbe_hr_tms.PublicHolidayController" t-inherit="web.CalendarController" t-inherit-mode="primary">
        <xpath expr="//Layout" position="inside">
            <t t-set-slot="control-panel-create-button">
                <span class="o_timeoff_buttons btn-group">
                    <div class="btn-group">
                        <button class="btn btn-primary btn-time-off " t-on-click="newPublicHoliday" type="button">
                            New
                        </button>
                    </div>
                </span>
            </t>
        </xpath>
        <DatePicker position="replace"/>
    </t>

</templates>