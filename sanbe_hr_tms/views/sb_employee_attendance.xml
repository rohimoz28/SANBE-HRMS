<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sb_employee_attendance_tree_view" model="ir.ui.view">
            <field name="name">sb.employee.attendance.tree</field>
            <field name="model">sb.employee.attendance</field>
            <field name="arch" type="xml">
                <tree string="Employee Attendances" create="0">
                    <field name="employee_id" string="Nama"/>
                    <field name="area_id" invisible="1"/>
                    <field name="nik"/>
                    <field name="details_date" string="Tanggal"/>
                    <field name="empgroup_id" string="Group Emp"/>
                    <field name="branch_id" string="BU"/>
                    <field name="department_id" string="Department"/>
                    <field name="time_in"/>
                    <field name="time_out"/>
                    <field name="status_attendance" string="Status"/>
                    <field name="periode_id" string="Periode"/>
                </tree>
            </field>
        </record>

        <record id="sb_employee_attendance_view_search" model="ir.ui.view">
            <field name="name">sb.employee.attendance.view.search</field>
            <field name="model">sb.employee.attendance</field>
            <field name="arch" type="xml">
                <search string="Employee Attendances">
                    <filter string="Periode" name="periode_id"
                            context="{'group_by':'periode_id'}"/>
                    <filter string="Business Unit" name="branch_id"
                            context="{'group_by':'branch_id'}"/>
                    <filter string="Department" name="department_id"
                            context="{'group_by':'department_id'}"/>
                    <filter string="Employee" name="employee_id"
                            context="{'group_by':'employee_id'}"/>
                </search>
            </field>
        </record>

        <record id="action_sb_employee_attendance" model="ir.actions.act_window">
            <field name="name">Employee Attendances</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sb.employee.attendance</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">tree</field>
            <field name="context">
                {
                'search_default_periode_id': 1,
                'search_default_branch_id': 1,
                'search_default_department_id': 1,
                'search_default_employee_id': 1
                }
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Report Employee Attendances
                </p>
                <p>
                    Create New Employee Attendances
                </p>
            </field>
        </record>

        <!-- <menuitem name="ModelTitle" id="ModelName_menu" parent="your_root_menu" action="ModelName_act_window"/> -->

    </data>
</odoo>