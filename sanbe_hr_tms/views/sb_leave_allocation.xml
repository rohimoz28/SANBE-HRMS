<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sb_leave_allocation_form_view" model="ir.ui.view">
            <field name="name">sb.leave.allocation.form</field>
            <field name="model">sb.leave.allocation</field>
            <field name="arch" type="xml">
                <form string="Leave Allocation">
                    <sheet>
                        <group>
                            <field name="employee_id"/>
                            <field name="date"/>
                            <field name="area_id"/>
                            <field name="branch_id"/>
                            <field name="department_id"/>
                            <field name="job_id"/>
                            <field name="leave_allocation"/>
                            <field name="leave_used"/>
                            <field name="leave_remaining" readonly="1" force_save="1"/>
                            <field name="remarks"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sb_leave_allocation_tree_view" model="ir.ui.view">
            <field name="name">sb.leave.allocation.tree</field>
            <field name="model">sb.leave.allocation</field>
            <field name="arch" type="xml">
                <tree string="Leave Allocation">
                    <field name="employee_id"/>
                    <field name="date"/>
                    <field name="area_id"/>
                    <field name="branch_id"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="leave_allocation"/>
                    <field name="leave_used"/>
                    <field name="leave_remaining"/>
                    <field name="remarks"/>
                    <field name="description"/> 
                </tree>
            </field>
        </record>

        <record id="sb_leave_allocation_search_view" model="ir.ui.view">
            <field name="name">sb.leave.allocation.search</field>
            <field name="model">sb.leave.allocation</field>
            <field name="arch" type="xml">
                <search string="Overtime Attendances">
                    <field name="employee_id" string="Employee"/>
                    <filter string="Business Unit" name="branch_id"
                            context="{'group_by':'branch_id'}"/>
                    <filter string="Employee" name="employee_id"
                            context="{'group_by':'employee_id'}"/>
                </search>
            </field>
        </record>

        <record id="action_sb_leave_allocation" model="ir.actions.act_window">
            <field name="name">Leave Allocation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sb.leave.allocation</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">tree,form</field>
            <field name="context">
                {'search_default_branch_id':1}
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Report Leave Allocation
                </p>
                <p>
                    Create New Leave Allocation
                </p>
            </field>
        </record>

        <!-- <menuitem name="ModelTitle" id="sb_leave_allocation_menu" parent="your_root_menu" action="sb_leave_allocation_act_window"/> -->

    </data>
</odoo>