<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
<!--        <delete model="ir.ui.view" search="[('id','=', ref('sanbe_hr_extended.hr_employee_extended_form'))]"/>-->
        <record id="hr_employee_tmss_form" model="ir.ui.view">
            <field name="name">hr.employee.tmss.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='nik_lama']" position="after">
                    <field name="badges_nos" widget="many2many_tags" readonly="state not in ['draft']" required="1" context="{'employee_nik': nik}"/>
                </xpath>
                <xpath expr="//field[@name='wd_type']" position="after">
                    <field name="workingday_id" invisible="wd_type not in ['non_shift', 'shift_non_shift']" required="wd_type in ['non_shift', 'shift_non_shift']" options="{'no_create': True,'no_create_edit': True,'no_open': True}" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
