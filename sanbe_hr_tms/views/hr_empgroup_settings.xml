        <!--    Action Windows    -->
        <record id="action_hr_employeegroup" model="ir.actions.act_window">
            <field name="name">Emp Group</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.empgroup</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Report HR Employee Group
