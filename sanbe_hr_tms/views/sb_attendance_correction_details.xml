<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inherit_sb_attendance_corrections_form_view" model="ir.ui.view">
            <field name="name">inherit.sb.attendance.corrections.details.form.view</field>
            <field name="model">sb.attendance.corrections</field>
            <field name="inherit_id" ref="sanbe_hr_tms.sb_attendance_corrections_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='sb_attendance_correction_details_id']" position="inside">
                    <field name="attn_correction_detail_ids">
                        <tree editable="bottom" create="0" delete="0" edit="0">
                            <field name="period_id" string="Period"/>
                            <field name="area_id" string="Area"/>
                            <field name="branch_id" string="Branch"/>
                            <field name="nik" string="NIK"/>
                            <field name="name" string="Name"/>
                            <field name="department_id" string="Department"/>
                            <field name="job_id" string="Job Position"/>
                            <field name="wdcode" string="WD Code"/>
                            <field name="empgroup_id" string="Emp Group"/>
                            <field name="tgl_time_in" string="Tgl Time in"/>
                            <field name="time_in" string="Time in" widget="float_time"/>
                            <field name="edited_time_in" string="Edited Time in" widget="float_time"/>
                            <field name="tgl_time_out" string="Tgl Time out"/>
                            <field name="time_out" string="Time out" widget="float_time"/>
                            <field name="edited_time_out" string="Edited Time out" widget="float_time"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>

    </data>
</odoo>