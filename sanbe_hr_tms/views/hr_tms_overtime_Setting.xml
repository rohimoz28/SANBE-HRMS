<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_tms_overtime_setting_view_form" model="ir.ui.view">
            <field name="name">hr_tms_overtime_setting_view_form</field>
            <field name="model">hr.overtime.setting</field>
            <field name="arch" type="xml">
                <form string="hr_tms_overtime_setting_form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="aot_from"/>
                            <field name="aot_to"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_overtime_setting_tree" model="ir.ui.view">
            <field name="name">hr.overtime.setting.tree</field>
            <field name="model">hr.overtime.setting</field>
            <field name="arch" type="xml">
                <tree string="Overtime Setting">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="aot_from" />
                    <field name="aot_to" />
                </tree>
            </field>
        </record>

        <!--    Action Windows    -->
        <record id="action_hr_overtime_setting" model="ir.actions.act_window">
            <field name="name">Overtime Setting</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.overtime.setting</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Record Overtime Setting
                </p>
                <p>
                    Create new Overtime Setting
                </p>
            </field>
        </record>

    </data>
</odoo>