<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="sb_route_master_view_form" model="ir.ui.view">
            <field name="name">sb.route.master.view.form</field>
            <field name="model">sb.route.master</field>
            <field name="arch" type="xml">
                <form string="Master Rute">
                    <sheet>
                        <group>
                            <field name="branch_id" />
                            <field name="route_code" required="1"/>
                            <field name="route_description" required="1"/>
                            <field name="is_active" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>    
        
        <record id="sb_route_master_view_tree" model="ir.ui.view">
            <field name="name">sb.route.master.view.tree</field>
            <field name="model">sb.route.master</field>
            <field name="arch" type="xml">
                <tree string="Master Rute">
                    <field name="branch_id"/>
                    <field name="route_code"/>
                    <field name="route_description"/>
                    <field name="write_date"/>
                    <field name="write_uid"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>

        <record id="sb_route_master_view_search" model="ir.ui.view">
            <field name="name">sb.route.master.view.search</field>
            <field name="model">sb.route.master</field>
            <field name="arch" type="xml">
                <search string="Master Rute">
                    <field name="branch_id"/>
                    <field name="route_code"/>
                    <field name="route_description"/>
                </search>
            </field>
        </record>

        <record id="sb_route_master_action" model="ir.actions.act_window">
            <field name="name">Master Rute</field>
            <field name="res_model">sb.route.master</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Report Master Rute
                </p>
                <p>
                    Create New Master Rute
                </p>
            </field>
        </record>
    
    </data>
    
</odoo>
