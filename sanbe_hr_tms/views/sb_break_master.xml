<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="sb_break_master_view_tree" model="ir.ui.view">
            <field name="name">sb.break.master.view.tree</field>
            <field name="model">sb.break.master</field>
            <field name="arch" type="xml">
                <tree string="Break Time Setting" editable="bottom">
                    <field name="branch_id" />
                    <field name="break_from" widget="easy_timepicker"/>
                    <field name="break_to" widget="easy_timepicker"/>
                    <field name="write_date" />
                    <field name="write_uid" />
                    <field name="is_active" />   
                </tree>
            </field>
        </record>

        <record id="sb_break_master_view_search" model="ir.ui.view">
            <field name="name">sb.break.master.view.search</field>
            <field name="model">sb.break.master</field>
            <field name="arch" type="xml">
                <search string="Break Time Setting">
                    <field name="branch_id" />
                    <field name="write_date" />
                    <field name="write_uid" />
                    <field name="is_active" />
                </search>
            </field>
        </record>
        
        <record id="sb_break_master_action" model="ir.actions.act_window">
            <field name="name">Break Time Setting</field>
            <field name="res_model">sb.break.master</field>
            <field name="view_mode">tree</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Break Time Setting Records
                </p>
                <p>
                    Create New Break Time Setting Records
                </p>
            </field>
        </record>
    
    </data>
    

</odoo>
