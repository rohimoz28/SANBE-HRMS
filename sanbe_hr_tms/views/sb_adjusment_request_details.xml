<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_sb_adjusment_requests_form_view" model="ir.ui.view">
        <field name="name">inherit.sb.adjusment.requests.form.view</field>
        <field name="model">sb.adjustment.requests</field>
        <field name="inherit_id" ref="sanbe_hr_tms.sb_adjusment_requests_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='sb_adjument_request_id']" position="inside">
                <field name="sb_adjument_request_ids">
                    <tree editable="bottom" widget='one2many_delete'>
                        <field name="revision_component" string="Revision Component" optional="show"/>
                        <field name="start_qty" string="Initial Qty" optional="show"/>
                        <field name="start_uom" string="Initial Uom" optional="show"/>
                        <field name="end_qty" string="Qty Revision" optional="show"/>
                        <field name="end_uom" string="Final Uom" optional="show"/>
                        <field name="variance" string="Variance" optional="show"/>
                        <field name="uom" string="Uom" optional="show"/>
                        <field name="code" string="Code" optional="show"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
</odoo>