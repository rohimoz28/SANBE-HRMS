<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="hr_tmsentry_form" model="ir.ui.view">
            <field name="name">hr.tmsentry.form</field>
            <field name="model">hr.attendance</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="tmsentry_status" invisible="1" />
                        <!--button name="approved_data" type="object" data-hotkey="shift+g"
                            string="Approved" class="oe_highlight" invisible="tms_status in ['approved','payroll','done']"/>
                        <button name="action_calculation" type="object" data-hotkey="shift+g"
                            string="Calculation" class="oe_highlight"/>
                        <button name="transfer_payroll" type="object" data-hotkey="shift+g"
                            string="Transfer To Payroll" class="oe_highlight" invisible="tms_status != 'approved'"/-->
                         <field name="tms_status" widget="statusbar" statusbar_visible="draft,approved,done"/>
                    </header>
                    <sheet>
                        <field name="sanbe_readytoapprove" invisible="1"/>
                        <group string="TMS Entry" name="tms_entry">
                            <group>
                                <field name="tmsentry_id" invisible="1" />
                                <field name="tmsentry_status" invisible="1" />
                                <field name="emp_id" invisible="1" />
                               <field name="area_id"
                                    options="{'no_create': True,'no_quick_create': True, 'no_create_edit': True}"  readonly="1"/>
                                <field name="department_id"
                                    options="{'no_create': True,'no_quick_create': True, 'no_create_edit': True}" readonly="1"/>
                            </group>
                            <group>
                               <field name="branch_ids" invisible="1" />
                                <field name="branch_id"
                                    options="{'no_create': True,'no_quick_create': True, 'no_create_edit': True}" required="1" readonly="1"/>
                                <field name="job_id"
                                    options="{'no_create': True,'no_quick_create': True, 'no_create_edit': True}" required="1" readonly="1"/>
                            </group>
                        </group>
                        <group>
                                <field name="employee_id"
                                    options="{'no_create': True,'no_quick_create': True, 'no_create_edit': True}" required="1" readonly="1"/>
                                <field name="nik" required="1" readonly="1"/>
                        </group>
                        <group string="TMS Details Entry" name="tms_details_entry" col="3">
                            <group>
                                 <field name="periode_id"  options="{'no_create': True,'no_quick_create': True, 'no_create_edit': True}" readonly="1"/>
                                 <field name="dates" widget="date" required="1"  readonly="1"/>
                                 <field name="tgl_masuk" widget="date" readonly="1"/>
                                 <field name="time_in" widget="easy_timepicker" readonly="1"/>
                                 <field name="time_in_edited" widget="easy_timepicker" readonly="tms_status =='done'"/>
                                 <field name="att_time" widget="easy_timepicker" readonly="1"/>
                                 <field name="codes"
                                    options="{'no_create': True,'no_quick_create': True, 'no_create_edit': True}" required="1"  readonly="1"/>
                                 <field name="attendence_status" readonly="1"/>
                            </group>
                            <group>
                                    <field name="tgl_keluar" widget="date" readonly="1"/>
                                    <field name="time_out" widget="easy_timepicker" readonly="1"/>
                                    <field name="time_out_edited" widget="easy_timepicker"  readonly="tms_status =='done'" />
                                    <field name="wd_type" readonly="1"/>
                                    <field name="delayed" widget="easy_timepicker" readonly="1"/>
                            </group>
                            <group>
                                <field name="hour_adv" readonly="1"/>
                                <field name="permision_code" readonly="1"/>
                                <field name="tunjagan_meal" readonly="1"/>
                            </group>
                        </group>
                        <group string="OT Details Entry" name="tms_ot_details_entry" col="3">
                            <group>
                                <field name="plan_ot_from" widget="easy_timepicker" readonly="1"/>
                                <field name="plan_ot_to" widget="easy_timepicker" readonly="1"/>
                            </group>
                            <group>
                                <field name="approval_ot_from" widget="easy_timepicker" readonly="1"/>
                                <field name="approval_ot_to" widget="easy_timepicker" readonly="1"/>
                            </group>
                            <group>
                                <field name="hour_adv1" readonly="1"/>
                                <field name="valid_from" widget="date" readonly="1"/>
                                <field name="valid_to" widget="date" readonly="1"/>
                            </group>
                        </group>
                        <!--group col="3">
                            <group>
                                <field name="ot1" readonly="1"/>
                                <field name="ot1_timex" readonly="tmsentry_status=='transfer_payroll'"/>
                                <field name="ot2" readonly="1"/>
                            </group>
                            <group>
                                <field name="ot2_timex" readonly="tmsentry_status=='transfer_payroll'"/>
                                <field name="ot3" readonly="1"/>
                                <field name="ot3_timex" readonly="tmsentry_status=='transfer_payroll'"/>
                            </group>
                            <group>
                                <field name="ot4" readonly="1"/>
                                <field name="ot4_timex" readonly="tmsentry_status=='transfer_payroll'"/>
                                <field name="ot_auto" readonly="1"/>
                                <field name="ot_auto_timex" readonly="tmsentry_status=='transfer_payroll'"/>
                            </group>    
                        </group-->
                        <notebook>
                            <page string="OT Calculation" name="ot_calculation">
                                <field name="tms_entry_ot" readonly="tmsentry_status=='transfer_payroll'">
                                    <tree editable="bottom">
                                        <field name="tms_entry_id" column_invisible="1"/>
                                        <field name="tmsentry_status" column_invisible="1" />
                                        <field name="code_ot" readonly="tmsentry_status=='transfer_payroll'"/>
                                        <field name="system_calcx" readonly="tmsentry_status=='transfer_payroll'"/>
                                        <field name="edited" readonly="tmsentry_status=='transfer_payroll'"/>
                                        <field name="approval" readonly="tmsentry_status=='transfer_payroll'"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="List Of Premi" name="premi_calculation">
                                <field name="tms_entry_premi" readonly="tmsentry_status=='transfer_payroll'">
                                    <tree editable="bottom">
                                        <field name="tms_entry_id" column_invisible="1"/>
                                        <field name="tmsentry_status" column_invisible="1" />
                                        <field name="code_premi" readonly="tmsentry_status=='transfer_payroll'"/>
                                        <field name="approval" readonly="tmsentry_status=='transfer_payroll'"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

