        <record id="hr_tmsentry_tree" model="ir.ui.view">
            <field name="name">hr.tmsentry.tree</field>
            <field name="model">hr.attendance</field>
            <field name="arch" type="xml">
                <tree string="HR TMS Entry Tree" create="0" edit="0" delete="1">
                    <field name="tmsentry_id" column_invisible="1" />
                    <field name="branch_ids" column_invisible="1" />
                    <field name="tmsentry_status" invisible="1" />
                    <field name="branch_id" options="{'no_open': True}"/>
                    <field name="employee_id" options="{'no_open': True}"/>
                    <field name="nik" options="{'no_open': True}"/>
                    <field name="department_id" options="{'no_open': True}"/>
                    <field name="area_id" options="{'no_open': True}"/>
                    <field name="job_id" options="{'no_open': True}"/>
                    <field name="wdcode" options="{'no_open': True}"/>
                    <field name="dates" options="{'no_open': True}"/>
                    <field name="department_id" options="{'no_open': True}"/>
                    <field name="tgl_masuk" options="{'no_open': True}"/>
                    <field name="time_in" options="{'no_open': True}"/>
                    <field name="tgl_keluar" options="{'no_open': True}"/>
                    <field name="time_out" options="{'no_open': True}"/>
                    <field name="att_time" options="{'no_open': True}"/>
                    <field name="attendence_status" options="{'no_open': True}"/>
                    <field name="ot1" options="{'no_open': True}"/>
                    <field name="ot1_time" options="{'no_open': True}"/>
                    <field name="ot2" options="{'no_open': True}"/>
                    <field name="ot2_time" options="{'no_open': True}"/>
                    <field name="ot3" options="{'no_open': True}"/>
                    <field name="ot3_time" options="{'no_open': True}"/>
                    <field name="ot4" options="{'no_open': True}"/>
                    <field name="ot4_time" options="{'no_open': True}"/>
                    <field name="ot_auto" options="{'no_open': True}"/>
                    <field name="ot_auto_time" options="{'no_open': True}"/>
                    <field name="tms_status" readonly="1"/>
                    <field name="approved" column_invisible="1"/>
                    <field name="ot_approve" column_invisible="1"/>
                    <field name="ot_reject" column_invisible="1"/>
                    <button name="approved_data" type="object" string="Approved" class="fa fa-check"/>
                    <button name="btn_reject" type="object" string="Reject" class="fa fa-ban"/>
                </tree>
            </field>
        </record>
    
    <record id="hr_tms_tree_view_search" model="ir.ui.view">
        <field name="name">hr.tms.tree.view.search</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <search string="TMS Entry">
                <field name="employee_id" filter_domain="[('employee_id', 'child_of', self)]"/>
                <field name="nik" string="NIK"/>
                <filter string="Department" name="department_id"
                        context="{'group_by':'department_id'}"/>
                <filter string="Employee" name="employee_id"
                        context="{'group_by':'employee_id'}"/>
            </search>
        </field>
    </record>
        <record id="action_hr_tmsentry" model="ir.actions.act_window">
            <field name="name">TMS Entry</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.attendance</field>
            <field name="search_view_id" ref="hr_tms_tree_view_search"/>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <!--field name="context">{'search_default_periode_id':1}</field-->
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('sanbe_hr_tms.hr_tmsentry_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('sanbe_hr_tms.hr_tmsentry_form_ext')}),
                ]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Report HR TMS Entry
                </p>
                <p>
                    Create new HR TMS Entry
                </p>
            </field>
        </record>

    </data>
</odoo>