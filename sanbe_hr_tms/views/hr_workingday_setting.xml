<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
         <!--        View Form    -->
        <record id="hr_workingday_setting_form" model="ir.ui.view">
            <field name="name">hr.workingday.setting.form</field>
            <field name="model">hr.working.days</field>
            <field name="arch" type="xml">
                <form string="Working Day">
                    <sheet>
                        <group col="2" name="workinghour_setting" string="Working Hour Setting">
                            <group></group>
                            <group>
                                <group>
                                    <label for="islabelstate" string="Status"/>
                                    <field name="islabelstate" invisible="1"/>
                                    <div class="mr8 oe_inline">
                                    <field name="is_active" class="mr8 oe_inline"/>
                                    <label for="is_active"/>
                                    <field name="is_inactive" class="mr8 oe_inline"/>
                                    <label for="is_inactive"/>
                                    </div>
                                </group>
                            </group>
                        </group>
                        <group col="2" name="workinghour_setting">
                            <group>
                                <field name="code" required="1"/>
                            </group>
                            <group>
                                <field name="deskripsi" required="1"/>
                            </group>
                        </group>
                        <group col="2" name="workinghour_setting">
                            <group>
                                <field name="area_id" required="1"/>
                            </group>
                            <group>
                                <field name="type_hari" widget="radio" options="{'horizontal': true}"/>
                                <!--label for="type_hari"/>
                                <field name="islabelfull" invisible="1"/>
                                <div class="mr8 oe_inline">
                                    <field name="type_hari" widget="radio" class="mr8 oe_inline"/>
                                </div-->
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="branch_ids" invisible="1"/>
                                <field name="available_for" widget="many2many_tags"/>
                                <!--label for="isavailabel" string="Aveilable For"/>
                                <field name="isavailabel" invisible="1"/>
                                <div class="mr8 oe_inline">
                                    <field name="bu3" class="mr8 oe_inline"/>
                                    <label for="bu3"/>
                                    <field name="bu4" class="mr8 oe_inline"/>
                                    <label for="bu4"/>
                                    <field name="bu5" class="mr8 oe_inline"/>
                                    <label for="bu5"/>
                                    <field name="bu6" class="mr8 oe_inline"/>
                                    <label for="bu6"/>
                                    <field name="sbe" class="mr8 oe_inline"/>
                                    <label for="sbe"/>
                                    <field name="cwc" class="mr8 oe_inline"/>
                                    <label for="cwc"/>
                                </div-->
                            </group>
                        </group>

                        <group col="2">
                            <group>
                                <field name="working_day_from" required="1"/>
                            </group>
                            <group>
                                <field name="working_day_to" required="1"/>
                            </group>
                            <group>
                                <field name="working_half_from" required="0" invisible="type_hari == 'fday'" />
                            </group>
                            <group>
                                <field name="working_half_to" required="0" invisible="type_hari == 'fday'" />
                            </group>
                            <group>
                                <field name="fullday_from" widget="easy_timepicker" required="1" />
                            </group>
                            <group>
                                <field name="fullday_to" widget="easy_timepicker" required="1" />
                            </group>
                            <group>
                                <field name="halfday_from" widget="easy_timepicker" invisible="type_hari == 'fday'" />
                            </group>
                            <group>
                                <field name="halfday_to" widget="easy_timepicker" invisible="type_hari == 'fday'" />
                            </group>
                            <group>
                                <field name="delay_allow"/>
                            </group>
                        </group>
                        <group>
                            <field name="is_tunjangan"/>
                        </group>
                        <group>
                            <field name="is_ot_holiday" help="Overtime Holiday"/>
                        </group>
                        <group>
                            <field name="is_ot_automatic" help="OT Otomatis" />
                        </group>
                        <group col="2">
                            <group>
                                <field name="valid_from"/>
                            </group>
                            <group>
                                <field name="valid_to"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="overtime" string="OT Calculation">
                                <field name="overtime_ids" required="1">
                                    <tree editable="bottom">
                                        <field name="workingday_id" column_invisible="1" />
                                        <field name="ot_type" />
                                        <field name="ot_code" />
                                        <field name="ot_from" widget="easy_timepicker" />
                                        <field name="ot_to" widget="easy_timepicker" />
                                        <field name="ot_auto"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="allowance_deduction" string="Allowance - Deduction">
                                <field name="allowance_ids">
                                    <tree editable="bottom">
                                        <field name="workingday_id" column_invisible="1" />
                                        <field name="code"/>
                                        <field name="time_from" widget="easy_timepicker" />
                                        <field name="time_to" widget="easy_timepicker" />
                                        <field name="qty"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!--   List View    -->
        <record id="hr_workingday_setting_tree" model="ir.ui.view">
            <field name="name">hr.workingday.setting.tree</field>
            <field name="model">hr.working.days</field>
            <field name="arch" type="xml">
                <tree string="Working Day">
                    <field name="area_id" readonly="1"/>
                    <field name="available_for" widget="many2many_tags" readonly="1"/>
                    <field name="code" optional="show" readonly="1"/>
                    <field name="deskripsi" readonly="1"/>
                </tree>
            </field>
        </record>
        <!--  Action Windows    -->
        <record id="action_hr_workingdays" model="ir.actions.act_window">
            <field name="name">Working Day</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.working.days</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Report Working Day
                </p>
                <p>
                    Create New Working Day
                </p>
            </field>
        </record>

    </data>
</odoo>