<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sb_allowances_form_view" model="ir.ui.view">
            <field name="name">sb.allowances.form</field>
            <field name="model">sb.allowances</field>
            <field name="arch" type="xml">
                <form string="Allowances">
                    <sheet>
                        <group>
                            <group>
                                <field name="area_id"/>
                            </group>
                            <notebook>
                                <page name="sb_allowance_id" string="Allowance List">
                                    <!-- override by view sb_allowances -->
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sb_allowances_tree_view" model="ir.ui.view">
            <field name="name">sb.allowances.tree</field>
            <field name="model">sb.allowances</field>
            <field name="arch" type="xml">
                <tree string="Allowances">
                    <field name="area_id"/>
                </tree>
            </field>
        </record>

