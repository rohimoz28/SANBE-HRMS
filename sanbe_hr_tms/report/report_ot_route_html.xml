<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- QWeb Report Template -->
    <template id="sanbe_hr_tms.report_ot_route_html" name="OT Route Report">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">                <!-- Styles -->
                <style>
                    .title {
                        font-weight: bold;
                        font-size: 16pt;
                    }

                    hr.line,
                    .middle-line1,
                    .middle-line2,
                    .line-1,
                    .footer-line1 {
                        border: none;
                        border-top: 1.5px solid black;
                    }

                    .middle-line1,
                    .middle-line2 {
                        margin: 2px 0;
                    }

                    .middle-line2 {
                        margin-bottom: 5px;
                    }

                    .line-1 {
                        margin-bottom: 5px;
                    }

                    .footer-line1 {
                        position: running(footer);
                    }

                    .table th,
                    .table td {
                        border: none;
                        padding: 10px;
                        text-align: center;
                        vertical-align: middle;
                        font-size: 10px;
                    }

                    .metadata-table {
                        font-size: 12px;
                        line-height: 1.5;
                        width: 100%;
                        border: none;
                        border-collapse: collapse;
                        text-align: right;
                    }

                    .metadata-table td,
                    .metadata-table th {
                        border: none;
                        padding: 2px 5px;
                        text-align: left;
                    }

                    .metadata-table p {
                        margin-bottom: 2px;
                    }

                    .metadata-table .label-cell {
                        padding-right: 10px;
                        text-align: left;
                    }

                    .metadata-table .value-cell {
                        text-align: left;
                    }

                    /* Logo dan Header */
                    .header {
                        width: 100%;
                        overflow: hidden;
                    }

                    .logo {
                        margin-left: 20px;
                    }

                    .header-table {
                        border: 1.5px solid black;
                    }

                    .header-table img {
                        max-width: 200px;
                    }

                    .header1 {
                        background-color: #d3d3d3;
                        font-weight: bold;
                    }

                    .header1,
                    .value1 {
                        border: 1.5px solid black;
                        padding: 8px;
                        text-align: center;
                        vertical-align: middle;
                    }

                    .detail-table {
                        border: 1.5px solid black;
                    }

                    .header2,
                    .value2 {
                        border: 1.5px solid black;
                        padding: 8px;
                        text-align: center;
                        vertical-align: middle;
                    }

                    .kotak {
                        display: inline-block;
                        border: 2px solid red;
                        padding: 5px;
                        font-size: 20px;
                        font-family: Arial, sans-serif;
                        color: red;
                    }

                    .footer-text {
                        font-size: 10px;
                        font-style: italic;
                        position: running(footer);
                    }

                    @page {
                        margin: 30px;
                        @bottom-right {
                            content: element(footer);
                        }
                    }
                    .page {
                        content: counter(page);
                    }

                    .topage {
                        content: counter(pages);
                    }
                </style>

                <!-- Header -->
                <header>
                    <t t-set="company" t-value="res_company"/>
                    <div class="line" style="border-top: 2px solid black;"></div>
                    <table class="header-table" width="100%">
                        <tr>
                            <td style="width: 25%;">
                                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                            </td>
                            <td style="width: 50%;" class="text-center">
                                <span class="title">Employee Overtime Report</span>
                            </td>
                            <td style="width: 25%;">
                                <table class="metadata-table">
                                    <tr>
                                        <td>No.</td>
                                        <td>: HRD-NS/FOR/LG/034</td>
                                    </tr>
                                    <tr>
                                        <td>Revision</td>
                                        <td>: 01</td>
                                    </tr>
                                    <tr>
                                        <td>Effective Date</td>
                                        <td>: 02 Jan 2024</td>
                                    </tr>
                                    <tr>
                                        <td>Next Review</td>
                                        <td>: 02 Jan 2027</td>
                                    </tr>
                                    <tr>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                    <hr class="line"/>
                </header>
                <br/>
                <span class="title">Employee Overtime Report By Route</span>
                <br/>
                <div class="page">
                    <t t-if="report_lines">
                        <t t-foreach="report_lines" t-as="dept">
                            <t t-esc="dept['route']"/>
                                <table class="table tabel-custom table-bordered table-striped" style="table-layout: fixed; border-color:#000000; font-size: 11px; width: 100%; border-collapse: collapse;">
                                    <style>
                                        table.tabel-custom {
                                            border-collapse: collapse;
                                            width: 100%;
                                            page-break-inside: auto;
                                            table-layout: fixed; 
                                            border-color: #000000; 
                                            font-size: 11px;
                                        }
                                        table.tabel-custom thead {
                                            display: table-header-group;
                                        }
                                        table.tabel-custom tfoot {
                                            display: table-footer-group;
                                        }
                                        table.tabel-custom tr {
                                            page-break-inside: avoid;
                                            page-break-after: auto;
                                            word-wrap: break-word; 
                                            white-space: normal;
                                        }
                                        table.tabel-custom th, table.tabel-custom td {
                                            border: 1px solid #000;
                                            padding: 2px;
                                            white-space: normal;
                                            overflow-wrap: break-word;
                                        }
                                        table.tabel-custom th.name {
                                            width: 220px;
                                        }
                                        table.tabel-custom td.name {
                                            width: 220px;
                                            text-align: left;
                                        }
                                        table.tabel-custom th.address{
                                            width: 150px; 
                                            word-wrap: break-word;
                                        }
                                        table.tabel-custom td.address {
                                            width: 150px; 
                                            word-wrap: break-word;
                                            text-align: left;
                                        }
                                        table.tabel-custom th.department, table.tabel-custom td.department {
                                            width: 140px;
                                            word-wrap: break-word;
                                        }
                                        table.tabel-custom th.nik, table.tabel-custom td.nik {
                                            width:120px;
                                            white-space: nowrap;
                                            text-align: center;
                                            overflow: visible; 
                                            text-overflow: clip;
                                        }
                                        table.tabel-custom th.no, table.tabel-custom td.no {
                                            width: 40px;
                                        }

                                        table.tabel-custom th.plan-start, table.tabel-custom td.plan-start,
                                        table.tabel-custom th.plan-finish, table.tabel-custom td.plan-finish,
                                        table.tabel-custom th.real-start, table.tabel-custom td.real-start,
                                        table.tabel-custom th.real-finish, table.tabel-custom td.real-finish {
                                            width: 60px;
                                            white-space: nowrap;
                                            text-align: center;
                                        }

                                        table.tabel-custom th.meal, table.tabel-custom td.meal {
                                            width: 40px;
                                            white-space: nowrap;
                                            text-align: center;
        }
                                    </style>

                                    <thead>
                                        <tr>
                                            <th class="text-center no" rowspan="2" style="font-size:18px;">
                                                <strong>No</strong>
                                            </th>
                                            <th class="text-center nik" rowspan="2" style="font-size:18px;">
                                                <strong>NIK</strong>
                                            </th>
                                            <th class="text-center name" rowspan="2" style="font-size:18px;">
                                                <strong>Name</strong>
                                            </th>
                                            <th class="text-center address" rowspan="2" style="font-size:18px;">
                                                <strong>Address</strong>
                                            </th>
                                            <th class="text-center department" rowspan="2" style="font-size:14px; border-color:#000000;">
                                                <strong>Department</strong>
                                            </th>
                                            <th class="text-center" rowspan="2" style="font-size:14px; border-color:#000000;">
                                                <strong>Shift</strong>
                                            </th>
                                            <th class="text-center" rowspan="2" style="font-size:14px; border-color:#000000; word-wrap: break-word;">
                                                <strong>Overtime Date</strong>
                                            </th>
                                            <th class="text-center" rowspan="2" style="font-size:14px; border-color:#000000; word-wrap: break-word;">
                                                <strong>Overtime Day</strong>
                                            </th>
                                            <th class="text-center" colspan="2" style="font-size:14px; border-color:#000000;">
                                                <strong>PLAN / PROPOSAL</strong>
                                            </th>
                                            <th class="text-center" colspan="2" style="font-size:14px; border-color:#000000;">
                                                <strong>REALIZATION</strong>
                                            </th>
                                            <th class="text-center meal" rowspan="2" style="font-size:14px; border-color:#000000;">
                                                <strong>Meal</strong>
                                            </th>
                                        </tr>
                                        <tr>
                                            <th class="plan-start" style="border-color:#000000; font-size:13px;">
                                                <strong>Start</strong>
                                            </th>
                                            <th class="plan-finish" style="border-color:#000000; font-size:13px;">
                                                <strong>Finish</strong>
                                            </th>
                                            <th class="real-start" style="border-color:#000000; font-size:13px;">
                                                <strong>Start</strong>
                                            </th>
                                            <th class="real-finish" style="border-color:#000000; font-size:13px;">
                                                <strong>Finish</strong>
                                            </th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <t t-foreach="dept['lines']" t-as="line">
                                            <tr>
                                                <td class="text-center no" style="font-size:13px;">
                                                    <t t-out="line['no']"/>
                                                </td>
                                                <td class="text-center nik" style="font-size:13px;">
                                                    <t t-out="line['nik']"/>
                                                </td>
                                                <td class="name" style="font-size:13px;">
                                                    <t t-out="line['employee_name']"/>
                                                </td>
                                                <td class="address" style="font-size:13px;">
                                                    <t t-out="line['address']"/>
                                                </td>
                                                <td class="text-center department" style="font-size:13px; word-wrap: break-word;">
                                                    <t t-out="line['department']"/>
                                                </td>
                                                <td class="text-center" style="font-size:13px;">
                                                    <t t-out="line['shift']"/>
                                                </td>
                                                <td class="text-center" style="font-size:13px;">
                                                    <t t-out="line['overtime_date']"/>
                                                </td>
                                                <td class="text-center" style="font-size:13px;">
                                                    <t t-out="line['overtime_day']"/>
                                                </td>
                                                <td class="text-center plan-start" style="font-size:13px;">
                                                    <t t-out="line['plan_start']"/>
                                                </td>
                                                <td class="text-center plan-finish" style="font-size:13px;">
                                                    <t t-out="line['plan_end']"/>
                                                </td>
                                                <td class="text-center real-start" style="font-size:13px;">
                                                    <t t-out="line['real_start']"/>
                                                </td>
                                                <td class="text-center real-finish" style="font-size:13px;">
                                                    <t t-out="line['real_end']"/>
                                                </td>
                                                <td class="text-center meal" style="font-size:13px;">
                                                    <t t-out="line['meal']"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="not report_lines">
                                            <tr>
                                                <td colspan="13" class="text-center">
                    No Data Available
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>


                        </t>
                    </t><span style="font-size:18px;">
    <strong>Total Employees : </strong>
    <t t-out="total_lines"/>
</span>
<div style="margin-top: 30px;">
    <table style="width:100%;">
        <tr>
            <td style="width:34%; text-align:center;">
                <br/>
                <br/>
                <br/>
                <br/>
                                    Administrasi HC
            </td>
            <td style="width:33%; text-align:center;">
                <br/>
                <br/>
                <br/>
                <br/>
                                    Human Capital Manager
            </td>
            <td style="width:33%; text-align:center;">
                                    <t t-out="area"/>
 ,                                    <span><t t-out="current_datetime_server"/></span>
                                    <br/>
                                    <br/>
                                    <br/>
                                    <br/>
                                    Plant Manager
                                </td>
                            </tr>
                        </table>
                    </div>
