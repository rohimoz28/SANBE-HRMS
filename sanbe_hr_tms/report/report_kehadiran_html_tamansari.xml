<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- QWeb Report Template -->
    <template id="sanbe_hr_tms.report_attendance_html_tamansari" name="Attendance Report Tamansari">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2 class="text-center mb-4">
                        Rekap Perhitungan Kehadiran Tamansari
                    </h2>
                    
                    <table class="table table-bordered table-striped" style="table-layout: auto; word-wrap: break-word;">
                        <thead>
                            <tr>
                                <th style="width: 5%;">No</th>
                                <th>Employee NIK</th>
                                <th>Employee</th>
                                <th>KRJ</th>
                                <th>HDR</th>
                                <th>LK</th>
                                <th>LB</th>
                                <th>CT</th>
                                <th>SKT</th>
                                <th>CH</th>
                                <th>I30</th>
                                <th>DT/A</th>
                                <th>CTBYR</th>
                                <th>KETERANGAN</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="report_lines" t-as="line">
                                <tr>
                                    <td><span t-esc="line['no']"/></td>
                                    <td><span t-esc="line['employee_nik']"/></td>
                                    <td class="text-wrap"><span t-esc="line['employee_name']"/></td>
                                    <td><span t-esc="line['attendee_total']"/></td>
                                    <td><span t-esc="line['attendee_count']"/></td>
                                    <td><span t-esc="line['lk']"/></td>
                                    <td><span t-esc="line['lb']"/></td>
                                    <td><span t-esc="line['leave_count']"/></td>
                                    <td><span t-esc="line['sick_count']"/></td>
                                    <td><span t-esc="line['ch']"/></td>
                                    <td><span t-esc="line['i30']"/></td>
                                    <td><span t-esc="line['absent_count']"/></td>
                                    <td><span t-esc="line['paid_leave']"/></td>
                                    <td><span t-esc="line['remark']"/></td>
                                </tr>
                            </t>
                            <t t-if="not report_lines">
                                <tr>
                                    <td colspan="16" class="text-center">
                                        No Data Available
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_report_attendance_tamansari" model="ir.actions.report">
        <field name="name">Attendance Report (HTML)</field>
        <field name="type">ir.actions.report</field>
        <field name="model">hr.tmsentry.summary</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">sanbe_hr_tms.report_attendance_html_tamansari</field>
         <field name="report_file">sanbe_hr_tms.report_attendance_html_tamansari</field>
        <field name="binding_model_id" ref="model_hr_tmsentry_summary"/>
        <field name="binding_type">report</field>
    </record>
</odoo>