<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- QWeb Report Template -->
    <template id="sanbe_hr_tms.report_attendance_html" name="Attendance Report">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <style>
                    table.table {
                        border-collapse: collapse;
                        width: 100%;
                    }
                    table.table th,
                    table.table td {
                        border: 1px solid black !important;
                        padding: 4px;
                    }
                </style>
                <thead>
                    <t t-set="company" t-value="res_company" />
                    <table style="width:100%; padding:0; margin:0; border: 0px solid transparent;">
                        <tr>
                            <td>
                                <img
                                    t-if="company.logo"
                                    t-att-src="image_data_uri(company.logo)"
                                    style="max-height: 100px; width: 200px;" alt="Logo"
                                />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div style="border-bottom: 2px solid black; margin-bottom: 2px;" />
                            </td>
                        </tr>
                        <tr>
                            <td class="text-left" style="vertical-align: top; font-family: 'Bookman Old Style', Georgia, serif; text-align: left;">
                                <strong>
                                    <span style="font-size:17px;" t-field="company.name" />
                                </strong> Pharmaceutical Manufacturer
                            </td>
                        </tr>
                        <tr>
                            <td style="font-size:13px; font-family: 'Bookman Old Style', Georgia, serif; text-align:left;" class="text-left">
                            <t t-if="doc.branch_id.street">
                                <span style="font-size:13px; font-family: 'Bookman Old Style', Georgia, serif;" t-field="doc.branch_id.street" />
                            </t>
                            <t t-if="doc.branch_id.street2">
                                <span style="font-size:13px; font-family: 'Bookman Old Style', Georgia, serif;" t-field="doc.branch_id.street2" />
                            </t>
                            <t t-if="doc.branch_id.city">
                                <span style="font-size:13px; font-family: 'Bookman Old Style', Georgia, serif;" t-field="doc.branch_id.city" />
                            </t>
                                <br /> Telp: <t t-if="doc.branch_id.phone"><span style="font-size:13px; font-family: 'Bookman Old Style', Georgia, serif;" t-field="doc.branch_id.phone" /></t>
                                <br /> Fax: <t t-if="doc.branch_id.fax"><span style="font-size:13px; font-family: 'Bookman Old Style', Georgia, serif;" t-field="doc.branch_id.fax" /></t>
                                <br />
                                <t t-if="doc.branch_id.city"><span style="font-size:13px; font-family: 'Bookman Old Style', Georgia, serif;" t-field="doc.branch_id.city" /></t> <t t-if="doc.branch_id.zip"><span style="font-size:13px; font-family: 'Bookman Old Style', Georgia, serif;" t-field="doc.branch_id.zip" /></t>
                            </td>
                        </tr>
                    </table>
                </thead>
                <br />
                <div class="page">
                    <div style="text-align: center;">
                        <h2 class="mb-4">
                            Rekap Perhitungan Kehadiran dan Overtime - HRMS
                        </h2>
                    </div>
                    <table class="table table-bordered table-striped" style="table-layout: auto; word-wrap: break-word;">
                        <thead>
                            <tr>
                                <th style="width: 5%;">No</th>
                                <th>Employee</th>
                                <th>Employee NIK</th>
                                <th>Job Title</th>
                                <th>Working Day</th>
                                <th>Attendee</th>
                                <th>Absent</th>
                                <th>Total Leave</th>
                                <th>Total Sick</th>
                                <th>Total OT1</th>
                                <th>Total OT2</th>
                                <th>Night Shift 1</th>
                                <th>Night Shift 2</th>
                                <th>Status</th>
                                <th>Deduction</th>
                                <th>Total Delay</th>
                                <th>Times Delayed</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="report_lines" t-as="line">
                                <tr>
                                    <td><span t-esc="line['no']"/></td>
                                    <td class="text-wrap"><span t-esc="line['employee_name']"/></td>
                                    <td><span t-esc="line['employee_nik']"/></td>
                                    <td class="text-wrap"><span t-esc="line['job_title']"/></td>
                                    <td><span t-esc="line['attendee_total']"/></td>
                                    <td><span t-esc="line['attendee_count']"/></td>
                                    <td><span t-esc="line['absent_count']"/></td>
                                    <td><span t-esc="line['leave_count']"/></td>
                                    <td><span t-esc="line['sick_count']"/></td>
                                    <td><span t-esc="line['ot1_total']"/></td>
                                    <td><span t-esc="line['ot2_total']"/></td>
                                    <td><span t-esc="line['nightshift1_count']"/></td>
                                    <td><span t-esc="line['nightshift2_count']"/></td>
                                    <td><span t-esc="line['state']"/></td>
                                    <td><span t-esc="line['deduction']"/></td>
                                    <td><span t-esc="line['delay_total']"/></td>
                                    <td><span t-esc="line['delay_count']"/></td>
                                </tr>
                            </t>
                            <t t-if="not report_lines">
                                <tr>
                                    <td colspan="16" class="text-center">
                                        No Data Available
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <!-- paper format -->
    <record id="paperformat_report_kehadiran_cimahi_cimareme" model="report.paperformat">
        <field name="name">Print Out PDF Rekap Kehadiran Cimahi dan Cimareme</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">7</field>
        <field name="dpi">90</field>
    </record>

    <!-- Report Action -->
    <record id="action_report_attendance" model="ir.actions.report">
        <field name="name">Attendance Report (HTML)</field>
        <field name="type">ir.actions.report</field>
        <field name="model">hr.tmsentry.summary</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">sanbe_hr_tms.report_attendance_html</field>
        <field name="report_file">sanbe_hr_tms.report_attendance_html</field>
        <field name="binding_model_id" ref="model_hr_tmsentry_summary"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="sanbe_hr_tms.paperformat_report_kehadiran_cimahi_cimareme"/>
    </record>
</odoo>
