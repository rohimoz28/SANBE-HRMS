<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="ir_cron_overtime_planning" model="ir.cron">
            <field name="name">HR Overtime Planning: Reset Running Number</field>
            <field name="model_id" ref="model_hr_overtime_planning"/>
            <field name="state">code</field>
            <field name="code">model._reset_sequence_overtime_employees()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>

        <record id="ir_cron_permission_entry" model="ir.cron">
            <field name="name">HR Permission Entry: Reset Running Number</field>
            <field name="model_id" ref="model_hr_permission_entry"/>
            <field name="state">code</field>
            <field name="code">model._reset_sequence_permission_entry()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>

        <record id="ir_cron_empgroup" model="ir.cron">
            <field name="name">HR Emp Group: Reset Running Number</field>
            <field name="model_id" ref="model_hr_empgroup"/>
            <field name="state">code</field>
            <field name="code">model._reset_sequence_empgroup()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>

        <record id="ir_cron_populate_leave_allocation" model="ir.cron">
            <field name="name">HR Leave Allocation: Populate Leave Allocation</field>
            <field name="model_id" ref="model_sb_leave_allocation"/>
            <field name="state">code</field>
            <field name="code">model._cron_populate_leave_alloc()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.utcnow() + timedelta(days=1)).replace(hour=18, minute=0, second=0, microsecond=0).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field eval="False" name="doall"/>
        </record>
</odoo>