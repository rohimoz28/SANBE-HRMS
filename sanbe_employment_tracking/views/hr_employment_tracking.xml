<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_hr_employment_tracking_tree" model="ir.ui.view">
            <field name="name">hr.employment.tracking.tree</field>
            <field name="model">hr.employment.tracking</field>
            <field name="priority">1000</field>
            <field name="arch" type="xml">
                <tree string="HR Mutation ">
                        <field name="emp_no"/>
                        <field name="nik"/>
                        <field name="employee_id" invisible="1"/>
                        <field name="employee_name"/>
                        <field name="nik"/>
                        <field name="area"/>
                        <field name="bisnis_unit"/>
                        <field name="departmentid"/>
                        <field name="jobstatus"/>
                        <field name="employementstatus"/>
                        <field name="jobtitle"/>

                </tree>
            </field>
        </record>

        <record id="view_hr_employment_tracking_form" model="ir.ui.view">
            <field name="name">hr.employment.tracking.form</field>
            <field name="model">hr.employment.tracking</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="HR Mutation Type">
<!--                 <header>-->
<!--                    <button string="Approve" name="button_approve" type="object" class="oe_highlight" invisible="state in ['approved']"/>-->
<!--                    <field name="state" widget="statusbar" statusbar_visible="draft,approved"/>-->
<!--                </header>-->
                    <group name="emp_det" string="Employee Details">
                        <group>
                            <field name="idpeg" invisible="1"/>
                            <field name="emp_no" options="{'no_create': True,'no_create_edit': True}" context="{'search_by': 'No'}"/>
                        </group>
                        <group>
<!--                            <button name="pencarian_data" type="object"-->
<!--                                id="pencarian_data"-->
<!--                                string="Search"-->
<!--                                class="btn-primary" data-hotkey="q"/>-->
                        </group>
                            <group >
                                <field name="employee_id" invisible="1"/>
                                <field name="employee_name" readonly="1" force_save="1"/>
                                <field name="nik" readonly="1" force_save="1"/>
                                <field name="area" readonly="1" force_save="1"/>
                                <field name="bisnis_unit" readonly="1" force_save="1"/>
                                <field name="departmentid" readonly="1" force_save="1"/>
                             </group>
                            <group>
                                <field name="jobstatus" readonly="1" force_save="1"/>
                                <field name="employementstatus" readonly="1" force_save="1"/>
                                <field name="jobtitle" readonly="1" force_save="1"/>
                            </group>
                    </group>
                    <notebook>
                        <page name="employment_tracking" string="Employment Details">
                            <field name="tracking_ids">
                                <tree create="0" edit="0" delete="0">
                                    <field name="service_type"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="bisnis_unit"/>
                                    <field name="department_id"/>
                                    <field name="job_title"/>
                                    <field name="job_status"/>
                                    <field name="emp_status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                <footer>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
                </form>
            </field>
        </record>

        <record id="view_employment_tracking_search" model="ir.ui.view">
            <field name="name">employement.tracking.search</field>
            <field name="model">hr.employment.tracking</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Employee Certification">
                    <field name="emp_no"/>
                    <field name="employee_name"/>
                    <field name="nik"/>
                </search>
            </field>
        </record>
        <record id="action_view_hr_employement_tracking" model="ir.actions.act_window">
            <field name="name">Employement Tracking</field>
            <field name="res_model">hr.employment.tracking</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem id="menu_hr_mutation"
                  name="Employment Tracking"
                  parent="hr.menu_hr_employee_payroll"
                  sequence="6"
                  action="action_view_hr_employement_tracking"/>

    </data>
</openerp>