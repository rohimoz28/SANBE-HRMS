<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="sb_loan_installment_monitoring_view_form" model="ir.ui.view">
            <field name="name">sb.loan.installment.monitoring.view.form</field>
            <field name="model">sb.loan.installment.monitoring</field>
            <field name="arch" type="xml">
                <form string="Monitoring Loan Installment">
                    <group name="loan_monitoring" string="Monitoring Loan Installment">
                        <group>
                            <field name="area_id" readonly="1"/>
                            <field name="branch_id" readonly="1"/>
                            <field name="department_id" readonly="1"/>
                            <field name="nik" readonly="1"/>
                            <field name="employee_id" readonly="1"/>
                            <field name="creditor" readonly="1"/>
                        </group>
                        <group>
                            <field name="loan_contract_no" readonly="1"/>
                            <field name="amount_loan" readonly="1"/>
                            <field name="installment" readonly="1"/>
                            <field name="amt_installment" readonly="1"/>
                            <field name="date_from" readonly="1"/>
                            <field name="date_to" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="loan_repayment" string="Loan Repayment">
                            <field name="loan_repayment_ids">
                                <tree>
                                    <field name="pay"/>
                                    <field name="pay_date"/>
                                    <field name="bb_amount"/>
                                    <field name="pay_amount"/>
                                    <field name="eb_amount"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="sb_loan_installment_monitoring_view_tree" model="ir.ui.view">
            <field name="name">sb.loan.installment.monitoring.view.tree</field>
            <field name="model">sb.loan.installment.monitoring</field>
            <field name="arch" type="xml">
                <tree string="Monitoring Loan Installment">
                    <field name="area_id" />
                    <field name="branch_id" />
                    <field name="department_id" />
                    <field name="nik" />
                    <field name="employee_id" />
                    <field name="creditor" />
                    <field name="loan_contract_no" />
                    <field name="amount_loan" />
                    <field name="installment" />
                    <field name="amt_installment" />
                    <field name="date_from" />
                    <field name="date_to" />
                </tree>
            </field>
        </record>

        <record id="sb_loan_installment_monitoring_view_search" model="ir.ui.view">
            <field name="name">sb.loan.installment.monitoring.view.search</field>
            <field name="model">sb.loan.installment.monitoring</field>
            <field name="arch" type="xml">
                <search string="Monitoring Loan Installment">
                    <field name="area_id" />
                    <field name="branch_id" />
                    <field name="department_id" />
                    <field name="nik" />
                    <field name="employee_id" />
                    <field name="creditor" />
                    <field name="loan_contract_no" />
                    <field name="amount_loan" />
                    <field name="installment" />
                    <field name="amt_installment" />
                    <field name="date_from" />
                    <field name="date_to" />
                </search>
            </field>
        </record> 

        <record id="sb_loan_installment_monitoring_action" model="ir.actions.act_window">
            <field name="name">Monitoring Loan Installment</field>
            <field name="res_model">sb.loan.installment.monitoring</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Monitoring Loan Installment Records
                </p>
                <p>
                    Create New Monitoring Loan Installment Records
                </p>
            </field>
        </record>
    
    </data>
    
</odoo>
