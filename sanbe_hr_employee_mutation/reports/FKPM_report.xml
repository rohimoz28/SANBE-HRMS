<?xml version="1.0" encoding="UTF-8"?>
<data>
  <record id="paperformat_fkpm_report" model="report.paperformat">
    <field name="name">Print Out PDF FKPM</field>
    <field name="default" eval="True"/>
    <field name="format">A4</field>
    <field name="orientation">Portrait</field>
    <field name="margin_top">10</field>
    <field name="margin_bottom">15</field>
    <field name="margin_left">7</field>
    <field name="margin_right">7</field>
    <field name="header_line" eval="True"/>
    <field name="header_spacing">35</field>
    <field name="dpi">90</field>
  </record>

  <record id="fkpm_report" model="ir.actions.report">
    <field name="name">FKPM Form Report</field>
    <field name="model">hr.employee.mutations</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">sanbe_hr_employee_mutation.fkpm_template</field>
    <field name="report_file">sanbe_hr_employee_mutation.fkpm_template</field>
    <field name="print_report_name">'%s - %s' % (object.employee_name, object.name)</field>
    <field name="binding_model_id" ref="model_hr_employee_mutations"/>
    <field name="binding_type">report</field>
    <field name="paperformat_id" ref="sanbe_hr_employee_mutation.paperformat_fkpm_report"/>
  </record>

