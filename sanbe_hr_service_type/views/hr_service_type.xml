<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="hr_service_types_form" model="ir.ui.view">
            <field name="name">hr.service.type.form</field>
            <field name="model">hr.services.types</field>
            <field name="arch" type="xml">
                <form string="Service Types Name">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field id="name" options="{'line_breaks': False}" widget="text"
                                    class="text-break" name="name" default_focus="1"
                                    placeholder="e.g. Months Name" />
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_services_type_tree" model="ir.ui.view">
            <field name="name">hr.services.types.tree</field>
            <field name="model">hr.services.types</field>
            <field name="arch" type="xml">
                <tree string="HR Services Types Name">
                    <field name="name" optional="show" />
                </tree>
            </field>
        </record>

        <record id="action_hr_services_types" model="ir.actions.act_window">
            <field name="name">Service Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.services.types</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Report Service Type
                </p>
                <p>
                    Create new Service Type
                </p>
            </field>
        </record>

    </data>
</odoo>