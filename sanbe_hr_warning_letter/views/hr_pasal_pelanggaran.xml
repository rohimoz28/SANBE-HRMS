<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        
        <record id="hr_pasal_pelanggaran_form" model="ir.ui.view">
            <field name="name">hr.pasal.pelanggaran.form</field>
            <field name="model">hr.pasal.pelanggaran</field>
            <field name="arch" type="xml">
                <form string="HR Pasal Pelanggaran">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field id="name" options="{'line_breaks': False}" widget="text"
                                    class="text-break" name="name" default_focus="1"
                                    placeholder="e.g. Months Name" />
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_pasal_pelanggaran_tree" model="ir.ui.view">
            <field name="name">hr.pasal.pelanggaran.tree</field>
            <field name="model">hr.pasal.pelanggaran</field>
            <field name="arch" type="xml">
                <tree string="HR Pasal Pelanggaran">
                    <field name="name" optional="show" />
                </tree>
            </field>
        </record>

        <record id="action_hr_pasal_pelanggaran" model="ir.actions.act_window">
            <field name="name">Pasal Pelanggaran</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.pasal.pelanggaran</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Report Pasal Pelanggaran
                </p>
                <p>
                    Create new Pasal Pelanggaran
                </p>
            </field>
        </record>

    </data>
</odoo>