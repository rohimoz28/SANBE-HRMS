<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_eoc_employee_wizard_form" model="ir.ui.view">
            <field name="name">skk.employee.eoc.wizard.form</field>
            <field name="model">skk.employee.eoc.wizard</field>
            <field name="arch" type="xml">
                <form string="Surat Keterangan Habis Kontrak">
                    <group>
                        <group>
                            <field name="name" string="Nomor :" placeholder="e.g. ....../PERS-GA/Intrn/....../2025"/>
                            <field name="employee_id" string="Karyawan" readonly="1"/>
                            <!-- <field name="contracts_count" string="Tahun ke" readonly="0"/> -->
                        </group>
                        <group>
                            <field name="receiver_id" string="Tujuan" readonly="0"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_confirm" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_eoc_employee_wizard" model="ir.actions.act_window">
            <field name="name">Surat Keterangan Habis Kontrak</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">skk.employee.eoc.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_eoc_employee_wizard_form"/>
            <field name="context">{'default_employee_id': active_id}</field>
        </record>
    </data>
</odoo>