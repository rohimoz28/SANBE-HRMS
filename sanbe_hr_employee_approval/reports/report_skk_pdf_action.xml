<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <template id="skk_pdf_format">
            <t t-call="web.basic_layout">
                <style>
                    .no-border-table,
                    .no-border-table td,
                    .no-border-table tr {
                        border: none !important;
                        border-collapse: collapse;
                    }
                </style>
                <div class="header">
                    <t t-set="company" t-value="res_company" />
                    <table style="width=100%; margin-right: auto; border: 0px solid transparent;">
                        <tr>
                            <td>
                                <img
                                    t-if="company.logo"
                                    t-att-src="image_data_uri(company.logo)"
                                    style="max-height: 100px; width: 200px;" alt="Logo"
                                />
                            </td>
                        </tr>
                    </table>
                    <div class="row">
                        <div class="col-12">
                            <div style="border-bottom: 1px solid black; margin-bottom: 2px;" />
                            <div style="border-bottom: 4px solid black;" />
                        </div>
                    </div>
                    <table style="width=100%; margin-left: auto; border: 0px solid transparent;">
                        <tr>
                            <td class="text-left" style="vertical-align: middle; font-family: 'Bookman Old Style', Georgia, serif;">
                                <strong>
                                    <span style="font-size:17px;" t-field="company.name" />
                                    Pharmaceutical Manufacturer
                                </strong>
                            </td>
                        </tr>
                        <tr>
                            <td style="font-size:13px; font-family: 'Bookman Old Style', Georgia, serif;" class="text-left">
                            <t t-if="o.employee_id.branch_id.street">
                                <strong>
                                    <span style="font-size:13px; font-family: 'Bookman Old Style', Georgia, serif;" t-field="o.employee_id.branch_id.street" />
                                </strong>
                            </t>
                            <t t-if="o.employee_id.branch_id.street2">
                                <strong>
                                    <span style="font-size:13px; font-family: 'Bookman Old Style', Georgia, serif;" t-field="o.employee_id.branch_id.street2" />
                                </strong>
                            </t>
                            <t t-if="o.employee_id.branch_id.city">
                                <strong>
                                    <span style="font-size:13px; font-family: 'Bookman Old Style', Georgia, serif;" t-field="o.employee_id.branch_id.city" />
                                </strong>
                            </t>
                                <strong>
                                    <br /> Telp: <t t-if="o.employee_id.branch_id.phone"><span style="font-size:13px; font-family: 'Bookman Old Style', Georgia, serif;" t-field="o.employee_id.branch_id.phone" /></t>
                                    <br /> Fax: <t t-if="o.employee_id.branch_id.fax"><span style="font-size:13px; font-family: 'Bookman Old Style', Georgia, serif;" t-field="o.employee_id.branch_id.fax" /></t>
                                    <br />
                                    <t t-if="o.employee_id.branch_id.city"><span style="font-size:13px; font-family: 'Bookman Old Style', Georgia, serif;" t-field="o.employee_id.branch_id.city" /></t> <t t-if="o.employee_id.branch_id.zip"><span style="font-size:13px; font-family: 'Bookman Old Style', Georgia, serif;" t-field="o.employee_id.branch_id.zip" /></t>
                                </strong>
                            </td>
                        </tr>
                    </table>
                </div>
                <br />
                <br />
                <div class="page">
                    <div class="text-center" style="text-align: center;">
                        <p style="text-align:center;">
                            <span style="font-size:20px;">
                                <strong>
                                    <u>SURAT KETERANGAN KERJA</u>
                                </strong>
                            </span>
                            <br/>
                            <span style="font-size:20px;"><span t-field="o.name"/>
                            </span>
                        </p>
                    </div>
                    <br/>
                    <p style="font-size:16px;">Yang bertanda tangan di bawah ini:</p>
                    <table class="no-border-table">
                        <tr>
                            <td style="width:50px;"></td>
                            <td style="width:150px; font-size:16px;"><strong>Nama</strong></td>
                            <td style="font-size:16px;">:&#160;&#160;<strong><span>Asep Rohman, SH.</span></strong>
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px;"></td>
                            <td style="width:150px; font-size:16px;"><strong>Jabatan</strong></td>
                            <td style="font-size:16px;">:&#160;&#160;<strong><span>Personnel &amp; General Affairs Manager</span></strong>
                            </td>
                        </tr>
                    </table>

                    <p style="font-size:16px;">Menerangkan bahwa:</p>
                    <table class="no-border-table">
                        <tr>
                            <td style="width:50px;"></td>
                            <td style="width:150px; font-size:16px;white-space:nowrap;"><strong>Nama</strong></td>
                            <td style="font-size:16px;white-space:nowrap;">:&#160;&#160;<strong><span t-field="o.employee_id.name"/></strong>
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px;"></td>
                            <td style="width:150px; font-size:16px;white-space:nowrap;"><strong>Jabatan</strong></td>
                            <td style="font-size:16px;white-space:nowrap;">:&#160;&#160;<strong><span t-field="o.employee_id.job_id.name"/></strong>
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px;"></td>
                            <td style="width:150px;font-size:16px;white-space:nowrap;"><strong>NIK</strong></td>
                            <td style="font-size:16px;white-space:nowrap;">:&#160;&#160;<strong><span t-field="o.employee_id.nik"/></strong>
                            </td>
                        </tr>
                    </table>

                    <p style="text-align:justify; font-size:16px;">
                Yang bersangkutan adalah benar karyawan di perusahaan ini yang bekerja sejak tanggal
                        <strong>
                            <t t-if="o.employee_id.job_status == 'permanent'">
                                <span t-field="o.first_join_date"/>    
                            </t>
                            <t t-if="o.employee_id.job_status == 'contract'">
                                <span t-field="o.join_date_contract"/>    
                            </t>
                            <t t-else="">

                            </t>
                        </strong> sampai dengan sekarang.
                    </p>

                    <p style="text-align:justify; font-size:16px;">
                Demikian surat keterangan ini dibuat untuk melengkapi persyaratan <strong><span t-field="o.descr"/></strong>
                    </p>

                    <br/>
                    <br/>

                    <t t-set="date" t-value="o.write_date"/>
                    <t t-set="dates" t-value="date.strftime('%d %B %Y').replace('January', 'Januari').replace('February', 'Februari').replace('March', 'Maret').replace('April', 'April').replace('May', 'Mei').replace('June', 'Juni').replace('July', 'Juli').replace('August', 'Agustus').replace('September', 'September').replace('October', 'Oktober').replace('November', 'November').replace('December', 'Desember')"/>

                    <div class="text-right">
                        <p style="font-size:16px;">Bandung, <t t-esc="dates"/>
                        </p>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <p style="font-size:16px;">
                            <strong>
                                <span>Asep Rohman, SH.</span>
                                <br/>
                                <br/>
                                <span>Personnel &amp; General Affairs Manager</span>
                            </strong>
                        </p>
                    </div>
                </div>
            </t>
        </template>

        
        <template id="report_skk_pdf_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="sanbe_hr_employee_approval.skk_pdf_format"/>
                </t>
            </t>
        </template>
    </data>
</odoo>