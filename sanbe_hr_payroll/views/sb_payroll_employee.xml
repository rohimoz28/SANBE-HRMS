<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sb_payroll_employee_form" model="ir.ui.view">
            <field name="name">sb.payroll.employee.form</field>
            <field name="model">sb.payroll.employee</field>
            <field name="arch" type="xml">
                <form string="Transaction - Payroll Summary - Details">
                    <group name="payroll_employee" string="Transaction - Payroll Summary - Details">
                        <group>
                            <field name="payroll_group" readonly="1"/>
                            <field name="period_pay_calc" readonly="1"/>
                            <field name="department_id" readonly="1"/>
                            <field name="employee_id" readonly="1"/>
                            <field name="job_id" readonly="1"/>
                            <field name="job_status" readonly="1"/>
                        </group>
                        <group>
                            <field name="state" readonly="1"/>
                            <field name="calc_date" readonly="1"/>
                            <field name="npwp" readonly="1"/>
                            <field name="emp_status" readonly="1"/>
                            <field name="gender" readonly="1"/>
                            <field name="bank_account" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="Detail" string="Detail">
                            <field name="payroll_employee_details_ids">
                                <tree create="0" delete="0" edit="0">
                                    <field name="pay_code"/>
                                    <field name="desc"/>
                                    <field name="type"/>
                                    <field name="qty"/>
                                    <field name="amount"/>
                                    <field name="amount_total"/>
                                    <field name="amount_total_edited"/>
                                </tree>
                            </field>
                            <group name="note_group" col="12" class="mt-4 mt-md-0">
                                <div class="clearfix"/>
                                    <group colspan="4">
                                        <group style="width:80%">
                                            <label for="atax" string="ATAX"/>
                                            <div class="o_row">
                                                <field name="atax" colspan="1" readonly="1"/>
                                            </div>
                                        </group>
                                        <group style="width:80%">
                                            <label for="dtax" string="DTAX"/>
                                            <div class="o_row">
                                                <field name="dtax" colspan="1" readonly="1"/>
                                            </div>
                                        </group>
                                        <group style="width:80%">
                                            <label for="total_b_salary" string="Total B. Salary"/>
                                            <div class="o_row">
                                                <field name="total_b_salary" colspan="1" readonly="1"/>
                                            </div>
                                        </group>
                                    </group>
                                    <group colspan="4">
                                        <group style="width:80%">
                                            <label for="total_allowance" string="Total Allowance"/>
                                            <div class="o_row">
                                                <field name="total_allowance" colspan="1" readonly="1"/>
                                            </div>
                                        </group>
                                        <group style="width:80%">
                                            <label for="total_deduction" string="Total Deduction"/>
                                            <div class="o_row">
                                                <field name="total_deduction" colspan="1" readonly="1"/>
                                            </div>
                                        </group>
                                        <group style="width:80%">
                                            <label for="total_overtime" string="Total Overtime"/>
                                            <div class="o_row">
                                                <field name="total_overtime" colspan="1" readonly="1"/>
                                            </div>
                                        </group>
                                    </group>
                                    <group colspan="4">
                                        <group style="width:80%">
                                            <label for="total_net_salary" string="Total Net Salary"/>
                                            <div class="o_row">
                                                <field name="total_net_salary" colspan="1" readonly="1"/>
                                            </div>
                                        </group>
                                    </group>
                                <div class="clearfix"/>
                            </group>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

