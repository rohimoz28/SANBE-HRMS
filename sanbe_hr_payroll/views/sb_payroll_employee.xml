        <record id="action_sb_payroll_employee" model="ir.actions.act_window">
            <field name="name">Payroll Employee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sb.payroll.employee</field>
            <field name="view_mode">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Payroll Employee Records
                </p>
                <p>
                    Create New Payroll Employee Records
                </p>
            </field>
        </record>
    </data>
