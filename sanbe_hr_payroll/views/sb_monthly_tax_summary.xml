<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sb_monthly_tax_summary_form_view" model="ir.ui.view">
            <field name="name">sb.monthly.tax.summary.form</field>
            <field name="model">sb.monthly.tax.summary</field>
            <field name="arch" type="xml">
                <form string="Monthly Tax Summary">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_group1"/>
                                <field name="employee_id"/>
                                <field name="nik"/>
                                <field name="total_net_salary"/>
                            </group>
                            <group>
                                <field name="ptkp"/>
                                <field name="ptkp_type"/>
                                <field name="percentage"/>
                                <field name="amount_tax_ter"/>
                            </group>
                            <!-- <notebook> -->
                            <!--     <page name="sb_monthly_tax_summary_id" string="Monthly Tax Summary Detail"> -->
                            <!--         &lt;!&ndash; override by view sb_bank_transfer_summary_detail &ndash;&gt; -->
                            <!--     </page> -->
                            <!-- </notebook> -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sb_monthly_tax_summary_tree_view" model="ir.ui.view">
            <field name="name">sb.monthly.tax.summary.tree</field>
            <field name="model">sb.monthly.tax.summary</field>
            <field name="arch" type="xml">
                <tree string="Monthly Tax Summary">
                    <field name="employee_group1"/>
                    <field name="employee_id"/>
                    <field name="nik"/>
                    <field name="total_net_salary"/>
                    <field name="ptkp"/>
                    <field name="ptkp_type"/>
                    <field name="percentage"/>
                    <field name="amount_tax_ter"/>
                    <field name="is_approved" widget="checkbox"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="sb_payroll_monthly_tax_summary_search" model="ir.ui.view">
            <field name="name">sb.monthly.tax.summary.search</field>
            <field name="model">sb.monthly.tax.summary</field>
            <field name="arch" type="xml">
                <search string="Monthly Tax Summary">
                    <filter string="Employee P Group" name="employee_group1"
                            context="{'group_by':'employee_group1'}"/>
                </search>
            </field>
        </record>

        <record id="action_payroll_monthly_tax_summary" model="ir.actions.act_window">
            <field name="name">Monthly Tax Summary</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sb.monthly.tax.summary</field>
            <field name="context">
                {'search_default_employee_group1':1}
            </field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Monthly Tax Summary Records
                </p>
                <p>
                    Create New Monthly Tax Summary Records
                </p>
            </field>
        </record>

        <!-- <menuitem name="ModelTitle" id="action_payroll_bank_transfer_summary" parent="menu_hr_payroll_bank_transfer_summary" action="action_payroll_bank_transfer_summary"/> -->

    </data>
</odoo>