<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sb_tax_setting_form_view" model="ir.ui.view">
            <field name="name">sb.tax.setting.form</field>
            <field name="model">sb.tax.setting</field>
            <field name="arch" type="xml">
                <form string="Tax Setting - TER">
                    <group name="tax_setting" string="Tax Setting - TER">
                        <group>
                            <field name="ed_from" />
                            <field name="ter_names" />
                            <field name="ptkp_ids" widget="many2many_tags" string="Available for PTKP" />
                            <field name="status" />
                        </group>
                    </group>
                    <notebook>
                        <page name="Detail" string="Detail">
                            <field name="ts_details_ids">
                                <tree editable="bottom">
                                    <field name="bruto_from" />
                                    <field name="bruto_to" />
                                    <field name="percent" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="sb_tax_setting_tree_view" model="ir.ui.view">
            <field name="name">sb.tax.setting.tree.view</field>
            <field name="model">sb.tax.setting</field>
            <field name="arch" type="xml">
                <tree string="Tax Setting - TER">
                    <field name="ter_names" />
                    <field name="ed_from" />
                    <field name="ptkp_ids" widget="many2many_tags"/>
                    <field name="status" />
                </tree>
            </field>
        </record>

        <record id="sb_tax_setting_search" model="ir.ui.view">
            <field name="name">sb.tax.setting.search</field>
            <field name="model">sb.tax.setting</field>
            <field name="arch" type="xml">
                <search string="Tax Setting">
                    <field name="ter_names" />
                    <field name="ed_from" />
                    <field name="ptkp_ids" />
                    <field name="status" />
                </search>
            </field>
        </record>
        
        <record id="action_sb_tax_setting" model="ir.actions.act_window">
            <field name="name">Tax Setting</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sb.tax.setting</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Tax Setting Records
                </p>
                <p>
                    Create New Tax Setting Records
                </p>
            </field>
        </record>

    </data>
</odoo>
