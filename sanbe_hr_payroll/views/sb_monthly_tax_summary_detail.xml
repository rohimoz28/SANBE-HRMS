<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_sb_monthly_tax_summary_form_view" model="ir.ui.view">
        <field name="name">inherit.sb.monthly.tax.summary.form.view</field>
        <field name="model">sb.monthly.tax.summary</field>
        <field name="inherit_id" ref="sanbe_hr_payroll.sb_monthly_tax_summary_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='sb_monthly_tax_summary_id']" position="inside">
                <field name="detail_ids">
                    <tree editable="bottom" widget="one2many_list" create="true">
                        <field name="employee_id"/>
                        <field name="nik"/>
                        <field name="employee_name"/>
                        <field name="total_net_salary"/>
                        <field name="ptkp" width="25%"/>
                        <field name="ptkp_type" width="25%"/>
                        <field name="percentage"/>
                        <field name="amount_tax_ter" width="25%"/>
                        <field name="is_approved" width="25%"/>
                        <field name="state"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
</odoo>