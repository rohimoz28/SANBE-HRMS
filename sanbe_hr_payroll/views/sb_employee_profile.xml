<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sb_employee_profile_form_view" model="ir.ui.view">
            <field name="name">sb.employee.profile.form</field>
            <field name="model">sb.employee.profile</field>
            <field name="arch" type="xml">
                <form string="Employee Profile" domain="[('emp_status', '=', 'confirmed')]">
                    <header>
                        <button string="Active" name="btn_active" 
                                type="object" class="oe_highlight"
                                invisible="state=='active'"/>
                        <button string="Inactive" name="btn_inactive" 
                                type="object" class="oe_highlight"
                                invisible="state=='inactive'"/>
                        <button string="Hold" name="btn_hold" 
                                type="object" class="oe_highlight"
                                invisible="state=='hold'"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_group1"/>
                                <field name="employee_id"/>
                                <field name="nik" />
                                <field name="department_id" />
                                <field name="job_id" />
                                <field name="area" readonly="1" invisible="1"/>
                                <!-- <field name="branch_id" readonly="1"/> -->
                            </group>
                            <group>
                                <field name="no_npwp" readonly="1"/>
                                <field name="emp_status" readonly="1"/>
                                <field name="job_status" readonly="1"/>
                                <field name="gender" readonly="1"/>
                                <field name="nik_lama" readonly="1"/>
                            </group>
                            <notebook>
                                <page name="sb_employee_profile_details_id" string="Employee Details">
                                    <group>
                                        <group>
                                            <field name="pay_type"/>
                                            <field name="pay_period"/>
                                            <field name="effective_date"/>
                                            <field name="bank_account"/>
                                            <field name="basic_salary"/>
                                        </group>
                                        <group>
                                            <field name="status_ptkp"/>
                                            <field name="type_ter"/>
                                            <field name="tax_method"/>
                                            <field name="bpjs_no"/>
                                            <field name="jamsostek_no"/>
                                        </group>
                                    </group>
                                </page>
                                <page name="allowance_and_deductions_id" string="Allowance and Deduction">
                                    <group>
                                        <!-- header -->
                                        <group>                                            
                                            <field name="pay_code"/>
                                            <field name="amount"/>
                                            <field name="times"/>
                                            <field name="remarks"/>
                                            <field name="selected_detail_id" invisible="1"/>                                         
                                        </group>
                                        <group>
                                            <field name="pct_from_bs" widget="percentage"/>
                                            <field name="formula"/>
                                            <field name="start_date"/>
                                            <button name="btn_save" string="Save" type="object" class="btn-primary"/>  
                                        </group>
                                    </group>
                                    <field name="allowance_ids">
                                        <tree editable="bottom" create="0">
                                            <field name="pay_code" optional='show'/>
                                            <field name="amount" optional='show'/>
                                            <field name="formula" optional='show'/>
                                            <field name="times" optional='show'/>
                                            <field name="start_date" optional='show'/>
                                            <field name="taxed" optional='show'/>
                                            <field name="remarks" optional='show'/>
                                            <button name="btn_edit" type="object" string="Edit"/>
                                        </tree>
                                    </field>
                                </page>
                                <page name="sb_compensation_id" string="Allowance and Deduction">
                                    
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sb_employee_profile_tree_view" model="ir.ui.view">
            <field name="name">sb.employee.profile.tree</field>
            <field name="model">sb.employee.profile</field>
            <field name="arch" type="xml">
                <tree string="Employee Profile">
                    <field name="nik"/>
                    <field name="employee_id" string="Employee Name"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="job_status"/>
                    <field name="employee_group1"/>
                    <field name="emp_status"/>
                    <field name="state"/>
                    <button name="action_view_employee_profile_details" type="object" string="View"
                            class="fa fa-check"/>
                </tree>
            </field>
        </record>

        <record id="sb_employee_profile_search" model="ir.ui.view">
            <field name="name">sb.employee.profile.search</field>
            <field name="model">sb.employee.profile</field>
            <field name="arch" type="xml">
                <search string="Employee Profile">
                    <!-- grouping berdasarkan employee_group1 -->
                    <filter string="Employee P Group" name="employee_group1"
                            context="{'group_by':'employee_group1'}"/>
                    <!-- field untuk pencarian yang lain -->
                    <field name="employee_id" />
                    <field name="gender" />
                    <field name="job_status" />
                </search>
            </field>
        </record>



        <record id="action_payroll_employee_profile" model="ir.actions.act_window">
            <field name="name">Employee Profile</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sb.employee.profile</field>
            <field name="context">
                {'search_default_employee_group1':1}
            </field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('emp_status', '=', 'confirmed')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Employee Profile Records
                </p>
                <p>
                    Create New Employee Profile Records
                </p>
            </field>
        </record>

    </data>
</odoo>