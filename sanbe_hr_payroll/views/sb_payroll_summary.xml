<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sb_payroll_summary_form_view" model="ir.ui.view">
            <field name="name">sb.payroll.summary.form</field>
            <field name="model">sb.payroll.summary</field>
            <field name="arch" type="xml">
                <form string="Payroll Summary">
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_group1"/>
                                <field name="employee_id"/>
                                <field name="basic_salary"/>
                            </group>
                            <group>
                                <field name="overtime"/>
                                <field name="allowance"/>
                                <field name="deduction"/>
                                <field name="net_salary"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sb_payroll_summary_tree_view" model="ir.ui.view">
            <field name="name">sb.payroll.summary.tree</field>
            <field name="model">sb.payroll.summary</field>
            <field name="arch" type="xml">
                <tree string="Payroll Summary">
                    <field name="employee_group1"/>
                    <field name="employee_id"/>
                    <field name="basic_salary"/>
                    <field name="overtime"/>
                    <field name="allowance"/>
                    <field name="deduction"/>
                    <field name="net_salary"/>
                    <button name="action_view_payroll_summary" type="object" string="View"
                            class="fa fa-check"/>
                </tree>
            </field>
        </record>

        <record id="sb_payroll_summary_search" model="ir.ui.view">
            <field name="name">sb.payroll.summary.search</field>
            <field name="model">sb.payroll.summary</field>
            <field name="arch" type="xml">
                <search string="Payroll Summary">
                    <filter string="Employee P Group" name="employee_group1"
                            context="{'group_by':'employee_group1'}"/>
                </search>
            </field>
        </record>

        <record id="action_payroll_summary" model="ir.actions.act_window">
            <field name="name">Payroll Summary</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sb.payroll.summary</field>
            <field name="context">
                {'search_default_employee_group1':1}
            </field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Payroll Summary Records
                </p>
                <p>
                    Create New Payroll Summary Records
                </p>
            </field>
        </record>

        <!-- <menuitem name="ModelTitle" id="action_payroll_sb_payroll_summary" parent="menu_hr_payroll_sb_payroll_summary" action="action_payroll_bank_transfer_summary"/> -->

    </data>
</odoo>