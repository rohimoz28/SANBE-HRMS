<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sb_ptkp_setting_form_view" model="ir.ui.view">
            <field name="name">sb.ptkp.setting.form.view</field>
            <field name="model">sb.ptkp.setting</field>
            <field name="arch" type="xml">
                <form string="PTKP Setting">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="ter_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sb_ptkp_setting_tree_view" model="ir.ui.view">
            <field name="name">sb.ptkp.setting.tree.view</field>
            <field name="model">sb.ptkp.setting</field>
            <field name="arch" type="xml">
                <tree string="PTKP Setting">
                    <field name="name" />
                    <field name="ter_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="sb_ptkp_setting_search" model="ir.ui.view">
            <field name="name">sb.ptkp.setting.search</field>
            <field name="model">sb.ptkp.setting</field>
            <field name="arch" type="xml">
                <search string="PTKP Setting">
                    <field name="name" />
                    <field name="ter_ids" widget="many2many_tags"/>
                </search>
            </field>
        </record>
        
        <record id="action_sb_ptkp_setting" model="ir.actions.act_window">
            <field name="name">PTKP Setting</field>
            <field name="res_model">sb.ptkp.setting</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No PTKP Setting Records
                </p>
                <p>
                    Create New PTKP Setting Records
                </p>
            </field>
        </record>

    </data>
</odoo>
