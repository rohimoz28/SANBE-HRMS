<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="hr_eoc_report_view_form" model="ir.ui.view">
            <field name="name">hr.eoc.report.view.form</field>
            <field name="model">hr.eoc.report</field>
            <field name="arch" type="xml">
                <form string="Surat Habis Kontrak">

                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="department_id" options="{'no_create': True,'no_create_edit': True}" required="1"/>
                            <field name="parent_id" options="{'no_create': True,'no_create_edit': True}"/>
                        </group>
                    </sheet>

                    <footer>
                        <button
                            name="button_export_pdf"
                            string="Print"
                            type="object"
                        />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>

                </form>
            </field>
        </record>

        <record id="hr_employee_contract_monitoring_tree_ext" model="ir.ui.view">
            <field name="name">hr.employee.contract.monitoring.tree.ext</field>
            <field name="model">hr.employee.contract.monitoring</field>
            <field name="inherit_id" ref="sanbe_hr_monitoring_contract.view_hr_employee_contract_monitoring_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="js_class">owl_list_controller_eoc_wizard</attribute>
                </xpath>
            </field>
        </record>

        <record id="hr_eoc_report_action_wizard" model="ir.actions.act_window">
            <field name="name">Surat Habis Kontrak</field>
            <field name="res_model">hr.eoc.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    
    </data>
    

</odoo>
