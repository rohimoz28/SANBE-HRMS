<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View wiz.act.contract.monitoring form -->
    <record id="view_wiz_act_contract_monitoring_form" model="ir.ui.view">
        <field name="name">view.wiz.act.contract.monitoring.form</field>
        <field name="model">wiz.act.contract.monitoring</field>
        <field name="arch" type="xml">
            <form string="Wiz Act Contract Monitoring">
                <div class="oe_title">
                    <label for="name"/>
                    <h1>
                        <field name="name" placeholder="Name..."/>
                    </h1>
                </div>
                <footer>
                    <button name="add" type="object" string="Add" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action wiz.act.contract.monitoring -->
    <record id="action_wiz_act_contract_monitoring" model="ir.actions.act_window">
        <field name="name">Wiz Act Contract Monitoring</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wiz.act.contract.monitoring</field>
        <field name="view_mode">form</field>
        <field name="binding_model_id" ref="addon.model_model_name"/>
        <field name="target">new</field>
    </record>

</odoo>
