<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="branch_code_form" model="ir.ui.view">
            <field name="name">branch.code.form</field>
            <field name="model">res.branch</field>
            <field name="inherit_id" ref="base_territory.res_branch_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_title')]" position="replace">
                    <div class="oe_title">
                         <label for="branch_code" class="oe_edit_only" />
                        <h1>
                            <field name="branch_code"  class="oe_edit_only" />
                        </h1>
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name"  class="oe_edit_only" />
                        </h1>
                    </div>
                </xpath>
            </field>
        </record>
        <record id="branch_code_tree" model="ir.ui.view">
            <field name="name">branch.code.tree</field>
            <field name="model">res.branch</field>
            <field name="inherit_id" ref="base_territory.res_branch_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="branch_code"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>