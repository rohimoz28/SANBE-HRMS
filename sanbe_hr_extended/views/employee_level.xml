<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="employee_level_form" model="ir.ui.view">
            <field name="name">employee.level.form</field>
            <field name="model">employee.level</field>
            <field name="arch" type="xml">
                <form string="Months Name">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field id="name" options="{'line_breaks': False}" widget="text"
                                    class="text-break" name="name" default_focus="1"
                                    placeholder="e.g. Months Name" />
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="employee_level_tree" model="ir.ui.view">
            <field name="name">employee.level.tree</field>
            <field name="model">employee.level</field>
            <field name="arch" type="xml">
                <tree string="Employee Level Name">
                    <field name="name" optional="show" />
                </tree>
            </field>
        </record>

        <record id="action_employee_level" model="ir.actions.act_window">
            <field name="name">Employee Level</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.level</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Report Employee Level
                </p>
                <p>
                    Create new Employee Level
                </p>
            </field>
        </record>

    </data>
</odoo>