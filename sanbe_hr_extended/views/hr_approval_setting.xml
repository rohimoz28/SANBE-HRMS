<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="hr_approval_setting_view_form" model="ir.ui.view">
            <field name="name">hr.approval.setting.view.form</field>
            <field name="model">hr.approval.setting</field>
            <field name="arch" type="xml">
                <form string="Approval">
                    <sheet>
                        <group>
                            <!-- <field name="allowed_employee_ids" invisible="1" /> -->
                            <field name="branch_id" options="{'no_create': True,'no_quick_create': True, 'no_create_edit': True}" required="1"/>
                            <field name="department_id" options="{'no_create': True,'no_quick_create': True, 'no_create_edit': True}" required="1"/>
                            <field name="model" required="1"/>
                            <field name="approval1_ids" required="1" options="{'no_create': True,'no_quick_create': True, 'no_create_edit': True}" widget="many2many_tags"/>
                            <field name="approval2_ids" options="{'no_create': True,'no_quick_create': True, 'no_create_edit': True}" widget="many2many_tags"/>
                            <field name="approval3_ids" options="{'no_create': True,'no_quick_create': True, 'no_create_edit': True}" widget="many2many_tags"/>
                            <field name="approval4_ids" options="{'no_create': True,'no_quick_create': True, 'no_create_edit': True}" widget="many2many_tags"/>
                            <field name="approval5_ids" options="{'no_create': True,'no_quick_create': True, 'no_create_edit': True}" widget="many2many_tags"/>
                            <field name="desc" required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_approval_setting_view_tree" model="ir.ui.view">
            <field name="name">hr.approval.setting.view.tree</field>
            <field name="model">hr.approval.setting</field>
            <field name="arch" type="xml">
                <tree string="Approval">
                    <field name="branch_id"/>
                    <field name="department_id"/>
                    <field name="model" />
                    <field name="approval1_ids" widget="many2many_tags"/>
                    <field name="approval2_ids" widget="many2many_tags"/>
                    <field name="approval3_ids" widget="many2many_tags"/>
                    <field name="approval4_ids" widget="many2many_tags"/>
                    <field name="approval5_ids" widget="many2many_tags"/>
                    <field name="desc"/>
                </tree>
            </field>
        </record>

        <record id="hr_approval_setting_view_search" model="ir.ui.view">
            <field name="name">hr.approval.setting.view.search</field>
            <field name="model">hr.approval.setting</field>
            <field name="arch" type="xml">
                <search string="Approval">
                    <field name="branch_id"/>
                    <field name="department_id"/>
                    <field name="model" />
                    <field name="approval1_ids"/>
                    <field name="approval2_ids"/>
                    <field name="approval3_ids"/>
                    <field name="approval4_ids"/>
                    <field name="approval5_ids"/>
                </search>
            </field>
        </record>

        <record id="hr_approval_setting_action" model="ir.actions.act_window">
            <field name="name">Approval Setting</field>
            <field name="res_model">hr.approval.setting</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Approval Setting Records
                </p>
                <p>
                    Create New Approval Setting Records
                </p>
            </field>
        </record>
        
    
    </data>
    

</odoo>
