<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="employee_report_wizard_view_form" model="ir.ui.view">
            <field name="name">employee.report.wizard.view.form</field>
            <field name="model">employee.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Export Employee Report">
                    <group>
                        <field name="start_date" />
                        <field name="end_date" />
                        <field name="branch_id" options="{'no_create': True,'no_create_edit': True}"/>
                        <field name="employee_group1" />
                        <field name="employee_levels" options="{'no_create': True,'no_create_edit': True}"/>  
                    </group>
                    <footer>
                        <button
                            name="button_export_html"
                            string="Export"
                            type="object"
                            default_focus="1"
                            class="oe_highlight"
                        />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_employee_report_wizard" model="ir.actions.act_window">
            <field name="name">Employee Report</field>
            <field name="res_model">employee.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sanbe_hr_extended.employee_report_wizard_view_form"/>
            <field name="target">new</field>
        </record>    
    
    </data>
</odoo>
