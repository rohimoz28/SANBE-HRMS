<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_hr_employee_export_wizard_form"  model="ir.ui.view">
            <field name="name">hr.employee.export.wizard.form</field>
            <field name="model">hr.employee.export.wizard</field>
            <field name="arch" type="xml">
                <form string="Export Employee Data">
                    <group>
                        <field name="department_id"/>
                    </group>
                    <footer>
                        <button 
                            string="Export" 
                            type="object" 
                            name="action_export_excel" 
                            class="btn-primary" 
                            context="{'export_excel': True}" />
                        <button 
                            string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_hr_employee_export_wizard" model="ir.actions.act_window">
            <field name="name">Data crosscheck Employee</field>
            <field name="res_model">hr.employee.export.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sanbe_hr_extended.view_hr_employee_export_wizard_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>