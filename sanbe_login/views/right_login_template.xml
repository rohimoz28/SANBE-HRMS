<odoo>
    <template id="right_login_layout" name="right Login Layout">
        <t t-call="web.frontend_layout">
            <style type="text/css">
            #face_rec{
                display: none;
            }
            #Face_Streming {
                transform: rotateY(180deg);
                -webkit-transform: rotateY(180deg);
            }
            #IsGrantedFace{
                display: none !important;
            }
            </style>
            <t t-set="html_data" t-value="{'style': 'height: 100%;'}"/>
            <t t-set="body_classname" t-value="'bg-100'"/>
            <t t-set="no_header" t-value="True"/>
            <t t-set="no_footer" t-value="True"/>
            <div class="background"
                 t-attf-style="#{bg_src}; background-color: #{background_color};
                 top: 0;
	             right: 0;
	             width: 100%;
	             height: 100%;
	             display: block;
	             background-repeat: no-repeat;
	             background-position: center center;
	             background-attachment: fixed;
	             -webkit-background-size: cover;
	             -moz-background-size: cover;
	             -o-background-size: cover;
	             background-size: cover;">
                <div class="container body_layout" style="height: 100%; width: 100%;left: 0; top: 50px;">
                    <div class="container py-5" style="width: 100%; right: 0; top: 180px;">
                        <div t-attf-class="card border-0 mx-auto bg-100 {{login_card_classes}} o_database_list"
                             style="max-width: 380px;
                             float: right;
                             background-color: none;
                             bottom: 0;
                             left: 0;
                             top: 50px;
                             border-radius: 19px;
                             box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
                             backdrop-filter: blur(20px);
                             -webkit-backdrop-filter: blur(20px);
                             border: 1px solid rgba(255, 255, 255, 1);
                            ">
                            <div class="card-body">
<!--                                <div t-attf-class="text-center pb-3 border-bottom {{'mb-3' if form_small else 'mb-4'}}">-->
<!--                                    <img t-attf-src="/web/binary/company_logo{{ '?dbname='+db if db else '' }}" alt="Logo" style="max-height:120px; max-width: 100%; width:auto"/>-->
<!--                                </div>-->
                                <t t-raw="0"/>
                                <div class="text-center small mt-4 pt-3 border-top" t-if="not disable_footer">
                                    <t t-if="not disable_database_manager">
                                        <a class="border-right pr-2 mr-1" href="/web/database/manager">Manage Databases</a>
                                    </t>
                                    <a href="https://www.odoo.com?utm_source=db&amp;utm_medium=auth" target="_blank">Powered by <span>Odoo</span></a>
                                </div>
                            </div>

                        </div>
                            <div class="overlay-panel overlay-left">
                                <h2 class="text-center">Welcome Guest</h2>
                                <div class="login100-pic js-tilt"  data-tilt="">
                                    <div t-attf-class="text-center pb-3 border-bottom {{'mb-3' if form_small else 'mb-4'}}">
                                        <img t-attf-src="/web/binary/company_logo{{ '?dbname='+db if db else '' }}" alt="Logo" style="max-height:120px; max-width: 100%; width:auto"/>
                                    </div>
<!--                                    <a class="text-center" href="#" style="font-weight: 600; font-size: 16px;">LOGIN TO YOUR ACCOUNT</a>-->
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="sanbe_login.right_login_template" name="Login">
        <t t-call="sanbe_login.right_login_layout">
<!--            <script src='https://www.google.com/recaptcha/api.js'></script>-->
            <form class="oe_login_form"  role="form" t-attf-action="/web/login" method="post" onsubmit="this.action = '/web/login' + location.hash">

                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
			       <div class="form-group field-login-face" style="margin-top:5px;">
    				    <label for="login-methode">Choose Login Methode</label>
                            <select name="login_selector"  t-attf-class="form-control #dropdown-menu" id="login-methode">
                                <option value="standard" selected="selected">Standard - Odoo</option>
                                <option value="face_login" >Face Recognizer</option>
                                <option value="idcard_login" >ID Cards</option>
                            </select>
				            <button id="face_rec" type="button" data-toggle="modal" data-target=".o_start_recognize" class="btn btn-primary flex-grow-1">Login</button>
		     	</div>
                <br/>
                <div class="form-group field-login">
                    <label for="login">Email</label>
                    <input type="text" placeholder="Email" name="login" t-att-value="login" id="login" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" autofocus="autofocus" autocapitalize="off"/>
                </div>
                <br/>
                    <div class="form-group field-password">
                            <label for="password">Password</label>
                            <input type="password" placeholder="Password" name="password" id="password" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" autocomplete="current-password" t-att-autofocus="'autofocus' if login else None" maxlength="4096"/>
                            <input class="form-check-input" type="checkbox" value="" name="IsGrantedFace" id="IsGrantedFace"/>
                            <i class="fa fa-eye-slash" id="togglePassword" onclick="myFunction(event)"></i>

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault"/>
                                <label class="form-check-label" for="flexCheckDefault">
                                      Remember me?
                                </label>
                            </div>
                    </div>
                    <br/>
<!--                        <div class="form-group field-captcha" align="center">-->
<!--                            <div id="captcha" class="imageContainer" >-->
<!--                                <div id ="g-recaptcha" class="g-recaptcha"-->
<!--                                            t-att-data-sitekey="request.env['ir.config_parameter'].sudo().get_param('recaptcha_public_key')"-->
<!--                                            data-callback='onSubmit'-->
<!--                                            data-action='submit' invisible="1">-->
<!--                                </div>-->
<!--                                <input class="form-control d-none" data-recaptcha="true" invisible="1" />-->
<!--                          <div class="help-block with-errors" id="err" style='color: red' invisible="1"></div>-->
<!--                        </div>-->
<!--                      </div>-->

                <p class="alert alert-danger" t-if="error" role="alert">
                    <t t-esc="error"/>
                </p>
                <p class="alert alert-success" t-if="message" role="status">
                    <t t-esc="message"/>
                </p>

                <div t-attf-class="clearfix oe_login_buttons text-center mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                    <button type="submit" class="login100-form-btn">Log in</button>
                    <div class="justify-content-between mt-2 d-flex small">
                        <a href="/web/reset_password">Forget Password?</a>
                    </div>
                    <div class="o_login_auth"/>
                </div>

                <input type="hidden" name="redirect" t-att-value="redirect"/>
            </form>
        </t>
    </template>
</odoo>