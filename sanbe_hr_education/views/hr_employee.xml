<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="hr_employee_certification_form" model="ir.ui.view">
            <field name="name">hr.employee.certification.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="sanbe_hr_certification.hr_employee_certification_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='certificate_details']" position="before">
                    <page name="education_details" string="Educations">
                        <field name="education_ids" context="{'tree_view_ref': 'sanbe_hr_education.employee_educations_level_tree', 'form_view_ref': 'sanbe_hr_education.employee_education_level_form'}"/>
                    </page>
                </xpath>
                <xpath expr="//page[@name='personal_information']/group/group[5]" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>