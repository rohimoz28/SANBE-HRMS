<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_certificated_type_tree" model="ir.ui.view">
            <field name="name">certificate.type.tree</field>
            <field name="model">certification.type</field>
            <field name="priority">1000</field>
            <field name="arch" type="xml">
                <tree string="Certificated Type">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="view_certificate_type_form" model="ir.ui.view">
            <field name="name">certificate.type.form</field>
            <field name="model">certification.type</field>
            <field name="type">form</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Certificated Type">
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_certificated_type_view">
            <field name="name">Certificated Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">certification.type</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_certificate_type_view_form">
            <field name="act_window_id" ref="act_open_certificated_type_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_certificate_type_form" />
        </record>

        <record model="ir.actions.act_window.view" id="act_open_certificate_type_view_tree">
            <field name="act_window_id" ref="act_open_certificated_type_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_certificated_type_tree" />
        </record>

        <record id="view_certificated_type_search" model="ir.ui.view">
            <field name="name">certificated.type.search</field>
            <field name="model">certification.type</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Kota">
                    <field name="name" select="True" />
                </search>
            </field>
        </record>

    </data>
</openerp>