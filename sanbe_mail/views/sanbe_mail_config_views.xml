<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_sanbe_mail_config_tree" model="ir.ui.view">
        <field name="name">view.sanbe.mail.config.tree</field>
        <field name="model">sanbe.mail.scheduler</field>
        <field name="arch" type="xml">
            <tree decoration-info="state_cron == 'run'" decoration-warning="state_cron == 'hold'" decoration-muted="state_cron == 'draft'">
            <!-- <tree  decorations-success="state_cron == 'run'" decorations-warning="state_cron == 'hold'" decorations-muted="state_cron == 'draft'"> -->
                <field name="branch_id"/>
                <field name="name"/>
                <field name="cron_interval" string="Interval"/>
                <field name="cron_duration" string="Duration"/>
                <field name="next_cron_exec" string="Last Exec"/>
                <field name="last_cron_exec" string="Next Exec"/>
                <field name="state_cron" widget="badge" decoration-danger="state_cron == 'hold'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sanbe_mail_config_form" model="ir.ui.view">
        <field name="name">view.sanbe.mail.config.form</field>
        <field name="model">sanbe.mail.scheduler</field>
        <field name="arch" type="xml">
            <form string="Sanbe Mail Config">
                <header>
                    <button name="running_task_list" type="object" string="Running By Cron" groups="sanbe_mail.group_sanbe_mail_template_administrator" invisible="1" />
                    <button name="action_set_run" type="object" class="btn-primary oe_highlight" string="Run" invisible="state_cron != 'draft'" groups="sanbe_mail.group_sanbe_mail_template_administrator"/>
                    <button name="action_set_hold" type="object" string="Hold" invisible="state_cron != 'run'" groups="sanbe_mail.group_sanbe_mail_template_administrator"/>
                    <button name="action_set_run" type="object" class="btn-primary oe_highlight" string="Re - Run" invisible="state_cron != 'hold'" groups="sanbe_mail.group_sanbe_mail_template_administrator"/>
                    <field name="state_cron" widget="statusbar" statusbar_visible="draft,run,hold"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string ="Template Name"/>
                        <h1>
                            <field name="name" placeholder="Template Name..." required="1" />
                        </h1>
                        <label for="branch_id" string ="Bisnis Unit"/>
                        <h3>
                            <div class='oe_row'>
                            <field name="branch_id" placeholder="Bisnis Unit..." required="1" />
                                <!-- at: <field name="task_hour" string="Hour" required="1"/> -->
                            </div>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <label for="cron_interval" string="Interval"/>
                            <div class="o_row">
                                <field name="cron_interval" required="1"/>
                                <field name="cron_duration" required="1"/>
                            </div>
                            <label for="task_hour" string="At :" invisible="1" />
                            <div class="o_row" invisible="1" >
                                <field name="task_hour" required="1" invisible="1" />
                                <field name="task_minute" required="1" invisible="1" />
                            </div>
                        </group>
                        <group>
                                <field name="next_cron_exec" string="Next Exec" readonly="1" widget="date"/>
                                <field name="last_cron_exec" string="Last Exec" readonly="1" widget="date"/>
                        </group>
                        <group invisible="1" >
                            <label for="max_attempts" string="Max Failed :" />
                            <div class="o_row" >
                                <field name="max_attempts" required="1" />
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page name="task_list" string="Task List">
                            <field name="task_mail_ids" widget="one2many_list">
                                <tree editable="bottom">
                                    <field name="create_date"/>
                                    <field name="subject"/>
                                    <field name="model_id" required="1" readonly="state_cron != 'hold'" string="Model/Class"/>
                                    <field name="task_code" required="1" string="Code/Function" readonly="state_cron != 'hold'"/>
                                    <field name="template_id" required="1" readonly="state_cron != 'hold'"/>
                                    <field name="email_to" widget='email'/>
                                    <field name="next_cron_date" string="Next Exec" required="0" column_invisible="1"/>
                                    <field name="task_hour" string="at:" required="0" column_invisible="1"/>
                                    <field name="mail_id" column_invisible="1"/>
                                    <field name="failure_reason" string='Reason'/>
                                    <field name="attempt_count" readonly="1" column_invisible="1"/>
                                    <field name="max_attempts" readonly="1" column_invisible="1"/>
                                    <field name="last_cron_date" string="Last Exec" readonly="1" column_invisible="1"/>
                                    <field name="state_cron" widget="badge" decoration-danger="state_cron == 'hold'" />
                                    <button name="process_task" string="Retry" type="object" icon="fa-refresh"/>
                                    <button name="re_active_task" string="Re Active Task" type="object" icon="fa-check" column_invisible="1"/>
                                    <button name="act_resend_msg" string="Re-Send" type="object" icon="fa-refresh" column_invisible="1"/>
                                    <field name="active" column_invisible="1"/>
                                </tree>
                            </field> 
                        </page>
                        <page name="log_cron" string="Log Cron" invisible="1">
                        </page>
                        <page name="log_mail" string="Log Mail" invisible="1">
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sanbe_mail_config_search" model="ir.ui.view">
        <field name="name">view.sanbe.mail.config.search</field>
        <field name="model">sanbe.mail.scheduler</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="branch_id"/>
                <filter name="active_cron" string="Active Cron" domain="[('cron_active','=',True)]"/>
                <filter name="state_run" string="Running" domain="[('state_cron','=','run')]"/>
                <group expand="1" string="Group By">
                    <filter string="Branch" name="branch" context="{'group_by': 'branch_id'}"/>
                    <filter string="State" name="state" context="{'group_by': 'state_cron'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sanbe_mail_config" model="ir.actions.act_window">
        <field name="name">Mail Scheduller</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sanbe.mail.scheduler</field>
        <field name="view_mode">tree,form</field>        <!-- Added tree here for multi-view -->
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There are no examples yet. Click here to add a new Sanbe Mail Config.
            </p>
        </field>
    </record>

    <menuitem id="menu_sanbe_config_mail_config" name="Sanbe Mail Scheduller" parent="menu_sanbe_config_mail_root" sequence="1" action="action_sanbe_mail_config" groups="sanbe_mail.group_sanbe_mail_template_administrator"/>

</odoo>
