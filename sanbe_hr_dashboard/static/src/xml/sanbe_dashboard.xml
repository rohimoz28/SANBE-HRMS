                                                    </div>

                                            </div>  
                                            <div style="height: 400px;">
                                                        
                                                    <ChartRenderer 
                                                        type="'bar'"
                                                        title="'Monthly Resignation Report'" 
                                                        data="state.chartData"
                                                    />
                    
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-12 pt-4 flex-grow-1">
                                        <div class="mt-8">
                                            <table class="table table-bordered w-full">
                                                <thead>
                                                    <tr>
                                                        <th class="p-2 text-center" colspan="9" style="background-color: #f0f0f0;">Employee Exit</th>
                                                    </tr>
                                                    <tr>
                                                        <th class="p-2 text-left"></th>
                                                        <th class="p-2" colspan="3">Bulan <span t-out="state.lastMonth" /></th>
                                                        <th class="p-2" colspan="3">Bulan <span t-out="state.currentMonth" /></th>
                                                    </tr>
                                                    <tr>
                                                        <th class="p-2"></th>
                                                        <th class="p-2">TS</th>
                                                        <th class="p-2">CMH</th>
                                                        <th class="p-2">CMR</th>
                                                        <th class="p-2">TS</th>
                                                        <th class="p-2">CMH</th>
                                                        <th class="p-2">CMR</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    
                                                    <tr t-foreach="state.categories" t-as="category" t-key="category">
                                                        
                                                        <td class="p-2">
                                                            <t t-esc="category" />
                                                        </td>
                            
                                                        <td class="p-2 text-center">
                                                            <t t-esc="state.employeeExitData.lastMonth[category]['Taman Sari']"/>
                                                        </td>
                                                        <td class="p-2 text-center">
                                                            <t t-esc="state.employeeExitData.lastMonth[category]['Cimahi']"/>
                                                        </td>
                                                        <td class="p-2 text-center">
                                                            <t t-esc="state.employeeExitData.lastMonth[category]['Cimareme']"/>
                                                        </td>
                                                        <td class="p-2 text-center">
                                                            <t t-esc="state.employeeExitData.currentMonth[category]['Taman Sari']"/>
                                                        </td>
                                                        <td class="p-2 text-center">
                                                            <t t-esc="state.employeeExitData.currentMonth[category]['Cimahi']"/>
                                                        </td>
                                                        <td class="p-2 text-center">
                                                            <t t-esc="state.employeeExitData.currentMonth[category]['Cimareme']"/>
                                                        </td>
                                                    </tr>
                                                
                                                    <tr class="font-weight-bold" style="background-color: #f0f0f0;">
                                                        <td class="p-2">Total</td>
                                                        <td class="p-2 text-center">
                                                                <t t-esc="state.employeeExitData.lastMonthTotals['Taman Sari']"/>
                                                            </td>
                                                        <td class="p-2 text-center">
                                                                <t t-esc="state.employeeExitData.lastMonthTotals['Cimahi']"/>
                                                            </td>
                                                        <td class="p-2 text-center">
                                                                <t t-esc="state.employeeExitData.lastMonthTotals['Cimareme']"/>
                                                            </td>
                                                        <td class="p-2 text-center">
                                                                <t t-esc="state.employeeExitData.currentMonthTotals['Taman Sari']"/>
                                                            </td>
                                                        <td class="p-2 text-center">
                                                                <t t-esc="state.employeeExitData.currentMonthTotals['Cimahi']"/>
                                                            </td>
                                                        <td class="p-2 text-center">
                                                                <t t-esc="state.employeeExitData.currentMonthTotals['Cimareme']"/>
                                                            </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
