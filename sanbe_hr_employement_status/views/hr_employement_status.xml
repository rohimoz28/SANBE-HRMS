<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="hr_employement_status_form" model="ir.ui.view">
            <field name="name">hr.employement.status.form</field>
            <field name="model">hr.employement.status</field>
            <field name="arch" type="xml">
                <form string="HR employement Status Name">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field id="name" options="{'line_breaks': False}" widget="text"
                                    class="text-break" name="name" default_focus="1"
                                    placeholder="e.g. Months Name" />
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_employement_status_tree" model="ir.ui.view">
            <field name="name">hr.employement.status.tree</field>
            <field name="model">hr.employement.status</field>
            <field name="arch" type="xml">
                <tree string="HR Employement Status Name">
                    <field name="name" optional="show" />
                </tree>
            </field>
        </record>

        <record id="action_hr_employement_status" model="ir.actions.act_window">
            <field name="name">Employement Status</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employement.status</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Report Employment Status
                </p>
                <p>
                    Create new Employment Status
                </p>
            </field>
        </record>

    </data>
</odoo>